<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected item: bright white -->
    <item android:color="#FFFFFF" android:state_enabled="true" android:state_checked="true"/>
    <!-- Unselected item: white with reduced opacity (dimmed) -->
    <item android:color="#66FFFFFF" android:state_enabled="true"/>
    <!-- Disabled item: white with very low opacity -->
    <item android:color="#33FFFFFF" android:state_enabled="false"/>
</selector>
