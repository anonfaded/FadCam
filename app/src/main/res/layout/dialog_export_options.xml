<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Quality Presets -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faditor_quality_presets"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/preset_low_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="@string/faditor_quality_low"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/preset_medium_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="@string/faditor_quality_medium"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/preset_high_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="@string/faditor_quality_high"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/preset_ultra_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/faditor_quality_ultra"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Quality Slider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faditor_quality"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <com.google.android.material.slider.Slider
                android:id="@+id/quality_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="10"
                android:valueTo="100"
                android:stepSize="5"
                android:value="80" />

            <TextView
                android:id="@+id/quality_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="80%"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:minWidth="48dp"
                android:gravity="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/quality_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faditor_quality_high_description"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp" />

        <!-- Format Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/faditor_format"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/format_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="MP4"
                android:focusable="false"
                android:clickable="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- File Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/file_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/faditor_filename"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/file_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Advanced Options -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faditor_advanced_options"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:layout_marginBottom="8dp" />

        <!-- Maintain Quality Switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/maintain_quality_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faditor_maintain_original_quality"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <!-- Custom Bitrate Switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/custom_bitrate_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faditor_custom_bitrate"
            android:layout_marginBottom="8dp" />

        <!-- Bitrate Slider (Initially Hidden) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faditor_bitrate"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/bitrate_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="1"
                android:valueTo="50"
                android:stepSize="1"
                android:value="10"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bitrate_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="10 Mbps"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:minWidth="64dp"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Estimated Size -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/faditor_export_preview"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/estimated_size_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/faditor_estimated_size_placeholder"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/faditor_cancel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/export_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faditor_export_video"
                app:icon="@drawable/ic_save" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>