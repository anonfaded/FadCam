<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/floating_menu_bg"
    android:padding="8dp">

    <!-- Header with title and close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/floating_menu_title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/btnCloseMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="close"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/materialicons"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#40FFFFFF"
        android:layout_marginBottom="4dp" />

    <!-- Start Recording -->
    <LinearLayout
        android:id="@+id/btnStartRec"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="fiber_manual_record"
            android:textSize="20sp"
            android:textColor="#4CAF50"
            android:fontFamily="@font/materialicons" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@string/floating_menu_start"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Pause Recording -->
    <LinearLayout
        android:id="@+id/btnPauseRec"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="pause_circle"
            android:textSize="20sp"
            android:textColor="#FF9800"
            android:fontFamily="@font/materialicons" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@string/floating_menu_pause"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Resume Recording -->
    <LinearLayout
        android:id="@+id/btnResumeRec"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="play_circle"
            android:textSize="20sp"
            android:textColor="#4CAF50"
            android:fontFamily="@font/materialicons" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@string/floating_menu_resume"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Stop Recording -->
    <LinearLayout
        android:id="@+id/btnStopRec"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="stop_circle"
            android:textSize="20sp"
            android:textColor="#F44336"
            android:fontFamily="@font/materialicons" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@string/floating_menu_stop"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
