<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTopBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Back"
            android:tint="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/motion_lab_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/white"
            android:textAlignment="viewStart"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/motion_lab_intro"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:id="@+id/group_card_motion_lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <LinearLayout
                    android:id="@+id/row_motion_enabled"
                    style="@style/SettingsGroupRow"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_focus_target"
                        android:tint="@android:color/darker_gray"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/motion_lab_enable"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="?attr/colorHeading"/>

                        <TextView
                            android:id="@+id/value_motion_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/motion_lab_status_disabled"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_motion_enabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <LinearLayout
                    android:id="@+id/row_motion_trigger_mode"
                    style="@style/SettingsGroupRow">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_settings_24"
                        android:tint="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/motion_lab_trigger_mode"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="?attr/colorHeading"/>
                    <TextView
                        android:id="@+id/value_motion_trigger_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"
                        android:layout_marginEnd="10dp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <LinearLayout
                    android:id="@+id/row_motion_sensitivity"
                    style="@style/SettingsGroupRow">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_focus_target"
                        android:tint="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/motion_lab_sensitivity"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="?attr/colorHeading"/>
                    <TextView
                        android:id="@+id/value_motion_sensitivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"
                        android:layout_marginEnd="10dp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <LinearLayout
                    android:id="@+id/row_motion_analysis_fps"
                    style="@style/SettingsGroupRow">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_speed_24"
                        android:tint="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/motion_lab_analysis_fps"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="?attr/colorHeading"/>
                    <TextView
                        android:id="@+id/value_motion_analysis_fps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"
                        android:layout_marginEnd="10dp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <LinearLayout
                    android:id="@+id/row_motion_debounce"
                    style="@style/SettingsGroupRow">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_settings"
                        android:tint="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/motion_lab_debounce"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="?attr/colorHeading"/>
                    <TextView
                        android:id="@+id/value_motion_debounce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"
                        android:layout_marginEnd="10dp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <LinearLayout
                    android:id="@+id/row_motion_post_roll"
                    style="@style/SettingsGroupRow">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_settings"
                        android:tint="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/motion_lab_post_roll"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="?attr/colorHeading"/>
                    <TextView
                        android:id="@+id/value_motion_post_roll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"
                        android:layout_marginEnd="10dp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <LinearLayout
                    android:id="@+id/row_motion_pre_roll"
                    style="@style/SettingsGroupRow">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_settings"
                        android:tint="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/motion_lab_pre_roll"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="?attr/colorHeading"/>
                    <TextView
                        android:id="@+id/value_motion_pre_roll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"
                        android:layout_marginEnd="10dp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <LinearLayout
                    android:id="@+id/row_motion_low_fps_fallback"
                    style="@style/SettingsGroupRow"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_speed_24"
                        android:tint="@android:color/darker_gray"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/motion_lab_low_fps_fallback"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="?attr/colorHeading"/>

                        <TextView
                            android:id="@+id/value_motion_low_fps_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/motion_lab_low_fps_helper"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_motion_low_fps_fallback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <LinearLayout
                    android:id="@+id/row_motion_low_fps_target"
                    style="@style/SettingsGroupRow">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_speed_24"
                        android:tint="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/motion_lab_low_fps_target"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="?attr/colorHeading"/>
                    <TextView
                        android:id="@+id/value_motion_low_fps_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"
                        android:layout_marginEnd="10dp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/motion_lab_footer"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
