<?xml version="1.0" encoding="utf-8"?>
<!-- Individual page tab in the tab bar -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/settings_home_row_bg"
    android:padding="12dp"
    android:layout_margin="4dp"
    android:minWidth="120dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Page name and delete button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtPageName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Page 1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/btnDeletePage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="close"
            android:textSize="16sp"
            android:textColor="#FF5252"
            android:fontFamily="@font/materialicons"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Page info -->
    <TextView
        android:id="@+id/txtPageInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 layers"
        android:textSize="11sp"
        android:textColor="#9E9E9E"
        android:layout_marginTop="4dp" />

</LinearLayout>
