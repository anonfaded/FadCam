<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/progress_overlay_background"
    android:clickable="true"
    android:focusable="true">

    <!-- Material 3 Progress Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="?attr/elevationLevel3"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.FadCam.Faditor.CardView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:minWidth="280dp">

            <!-- Progress Indicator -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_circular"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                app:trackColor="?attr/colorSurfaceVariant"
                app:indicatorColor="?attr/colorPrimary"
                app:trackThickness="4dp"
                style="@style/Widget.FadCam.Faditor.CircularProgressIndicator" />

            <!-- Linear Progress (for determinate progress) -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:trackColor="?attr/colorSurfaceVariant"
                app:indicatorColor="?attr/colorPrimary"
                app:trackCornerRadius="2dp"
                app:trackThickness="4dp"
                style="@style/Widget.FadCam.Faditor.LinearProgressIndicator" />

            <!-- Progress Message -->
            <TextView
                android:id="@+id/progress_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Processingâ€¦"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:textAlignment="center" />

            <!-- Progress Percentage -->
            <TextView
                android:id="@+id/progress_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="0%"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAlignment="center"
                android:visibility="gone" />

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/progress_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faditor_cancel"
                android:visibility="gone"
                style="@style/Widget.FadCam.Faditor.Button.Text" />

            <!-- Retry Button (for error state) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/progress_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faditor_retry"
                android:visibility="gone"
                style="@style/Widget.FadCam.Faditor.Button.Filled" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>