<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/text_month_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="?attr/colorHeading"
        android:textSize="14sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/month_select_container"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone">

        <ImageView
            android:id="@+id/month_select_bg"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:background="@drawable/picker_check_background"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/month_select_check"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            android:tint="@android:color/white"
            android:visibility="invisible" />
    </FrameLayout>
</LinearLayout>
