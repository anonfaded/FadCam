<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- Header bar (consistent with other tabs) -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTopBar">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nav_faditor_mini"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart" />

        <!-- Info icon -->
        <TextView
            android:id="@+id/btn_info"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:fontFamily="@font/materialicons"
            android:text="info"
            android:textColor="#888888"
            android:textSize="22sp"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- ─── Hero section (compact, premium) ──────────────── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="28dp"
                android:paddingBottom="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <!-- Accent icon -->
                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/settings_group_card_bg">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:fontFamily="@font/materialicons"
                        android:text="movie_edit"
                        android:textColor="#4CAF50"
                        android:textSize="32sp" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faditor_mini_title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="14dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faditor_home_tagline"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_marginTop="4dp"
                    android:textAlignment="center" />

                <!-- Start Project button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_select_video"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/faditor_start_project"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="14dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />
            </LinearLayout>

            <!-- ─── Recent Projects section ──────────────────────── -->
            <LinearLayout
                android:id="@+id/recent_projects_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <!-- Section header row: title + delete action -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/faditor_recent_projects"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading"
                        android:textAllCaps="true"
                        android:letterSpacing="0.08" />

                    <!-- Selection mode toggle (long-press hint) -->
                    <TextView
                        android:id="@+id/btn_select_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/materialicons"
                        android:text="checklist"
                        android:textColor="#666666"
                        android:textSize="22sp"
                        android:padding="4dp" />
                </LinearLayout>

                <!-- Selection action bar (hidden by default) -->
                <LinearLayout
                    android:id="@+id/selection_action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/settings_group_card_bg"
                    android:visibility="gone">

                    <!-- Select all checkbox -->
                    <CheckBox
                        android:id="@+id/cb_select_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#4CAF50"
                        android:minWidth="0dp"
                        android:minHeight="0dp" />

                    <TextView
                        android:id="@+id/tv_selection_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/faditor_select_items"
                        android:textColor="#CCCCCC"
                        android:textSize="13sp"
                        android:layout_marginStart="4dp" />

                    <!-- Delete selected -->
                    <TextView
                        android:id="@+id/btn_delete_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/materialicons"
                        android:text="delete"
                        android:textColor="#EF5350"
                        android:textSize="22sp"
                        android:padding="6dp" />

                    <!-- Cancel selection -->
                    <TextView
                        android:id="@+id/btn_cancel_selection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/materialicons"
                        android:text="close"
                        android:textColor="#999999"
                        android:textSize="22sp"
                        android:padding="6dp" />
                </LinearLayout>

                <!-- Actual project items list -->
                <LinearLayout
                    android:id="@+id/recent_projects_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
