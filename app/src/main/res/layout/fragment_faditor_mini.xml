<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- Header bar (consistent with other tabs) -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTopBar">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nav_faditor_mini"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- ─── Hero section ─────────────────────────────────── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="32dp"
                android:paddingBottom="20dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <!-- Big icon with tinted bg circle -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/settings_group_card_bg">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:fontFamily="@font/materialicons"
                        android:text="movie_edit"
                        android:textColor="#4CAF50"
                        android:textSize="36sp" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faditor_mini_title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faditor_home_tagline"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginTop="6dp"
                    android:textAlignment="center" />

                <!-- New Project button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_select_video"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/faditor_new_project"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="14dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />
            </LinearLayout>

            <!-- ─── Recent Projects section ──────────────────────── -->
            <LinearLayout
                android:id="@+id/recent_projects_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faditor_recent_projects"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#BBBBBB"
                    android:layout_marginBottom="8dp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.08" />

                <LinearLayout
                    android:id="@+id/recent_projects_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- ─── Features / capabilities grid ─────────────────── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faditor_capabilities_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#BBBBBB"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.08" />

                <!-- Row 1: Trim + Export -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <!-- Trim feature card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/settings_group_card_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/materialicons"
                            android:text="content_cut"
                            android:textColor="#4CAF50"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faditor_feature_trim"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faditor_feature_trim_desc"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Export feature card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/settings_group_card_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/materialicons"
                            android:text="file_download"
                            android:textColor="#42A5F5"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faditor_feature_export"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faditor_feature_export_desc"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 2: Preview + Privacy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Preview feature card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/settings_group_card_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/materialicons"
                            android:text="play_circle"
                            android:textColor="#FFA726"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faditor_feature_preview"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faditor_feature_preview_desc"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Privacy feature card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/settings_group_card_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/materialicons"
                            android:text="shield"
                            android:textColor="#AB47BC"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faditor_feature_privacy"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faditor_feature_privacy_desc"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- ─── Version info ─────────────────────────────────── -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="@string/faditor_version_info"
                android:textColor="#555555"
                android:textSize="12sp"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
