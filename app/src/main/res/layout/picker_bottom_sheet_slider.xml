<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/picker_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="20dp"
    android:paddingStart="14dp"
    android:paddingEnd="12dp">

    <!-- Header with close button and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <ImageView
            android:id="@+id/picker_close_btn"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="?attr/pickerTextSecondary"
            android:contentDescription="@string/close" />

        <TextView
            android:id="@+id/picker_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorHeading"
            android:textAlignment="viewStart" />

    </LinearLayout>

    <View
        android:id="@+id/picker_title_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#404040"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- Scroll container to match other pickers -->
    <ScrollView
        android:id="@+id/picker_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="ifContentScrolls"
        android:fillViewport="true"
        android:maxHeight="700dp"
        android:clipToPadding="false"
        android:paddingBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/picker_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <LinearLayout
                    android:id="@+id/picker_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp">

                    <!-- Switch row styled like other settings rows -->
                    <LinearLayout
                        android:id="@+id/picker_switch_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/settings_home_row_bg"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/picker_switch_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textAlignment="viewStart" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/picker_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Divider below switch row to match settings dividers -->
                    <View
                        android:id="@+id/picker_switch_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="12dp"
                        android:background="#404040"
                        android:visibility="gone" />

                    <!-- Slider card placed as a single group inside the card container -->
                    <LinearLayout
                        android:id="@+id/picker_slider_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/settings_group_card_bg"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:tag="slider_row">

                        <com.google.android.material.slider.Slider
                            android:id="@+id/picker_slider"
                            style="@style/Widget.FadCam.BottomSheetSlider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            app:thumbColor="?attr/pickerSliderActive"
                            app:tickColorActive="?attr/pickerSliderActive"
                            app:tickColorInactive="?attr/pickerSliderInactive"
                            app:tickVisible="false"
                            app:trackColorActive="?attr/pickerSliderActive"
                            app:trackColorInactive="?attr/pickerSliderInactive" />

                        <!-- Labels row: min / mid / max (e.g., -4.0 / 0.0 / +4.0) placed under the slider -->
                        <LinearLayout
                            android:id="@+id/picker_slider_labels"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="20dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp">

                            <TextView
                                android:id="@+id/picker_slider_label_min"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="-"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="13sp"
                                android:gravity="start"
                                android:textAlignment="viewStart" />

                            <TextView
                                android:id="@+id/picker_slider_label_mid"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/picker_slider_label_max"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="13sp"
                                android:gravity="end"
                                android:textAlignment="viewEnd" />

                        </LinearLayout>

                        <!-- Plus/minus centered below the labels -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="4dp"
                            android:paddingBottom="8dp">

                            <!-- Left spacer to center the control group -->
                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <!-- Centered control group: minus, value, plus -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/picker_slider_minus"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/materialicons"
                                    android:text="remove"
                                    android:textSize="16sp"
                                    android:textColor="?attr/pickerButtonText"
                                    android:background="@drawable/picker_circle_btn_tinted"
                                    android:contentDescription="Decrease"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="3dp" />

                                <TextView
                                    android:id="@+id/picker_slider_value"
                                    android:layout_width="48dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:textColor="?attr/colorOnSurface"
                                    android:text="0"
                                    android:textAlignment="center" />

                                <TextView
                                    android:id="@+id/picker_slider_plus"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/materialicons"
                                    android:text="add"
                                    android:textSize="16sp"
                                    android:textColor="?attr/pickerButtonText"
                                    android:background="@drawable/picker_circle_btn_tinted"
                                    android:contentDescription="Increase"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="3dp" />

                            </LinearLayout>

                            <!-- Right container: takes remaining space and right-aligns reset -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:paddingEnd="6dp">

                                <ImageView
                                    android:id="@+id/picker_slider_reset_icon"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:contentDescription="Reset"
                                    android:src="@drawable/undo_24px"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:tint="?attr/pickerIconTint"
                                    android:padding="4dp"
                                    android:layoutDirection="locale" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- labels moved up -->

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Helper anchored below the scrollable options so it remains above system nav bars -->
    <TextView
        android:id="@+id/picker_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="14dp"
        android:paddingEnd="12dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        android:visibility="gone"
        android:textAlignment="viewStart"/>

</LinearLayout>
