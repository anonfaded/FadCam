<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Fixed Header -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTopBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Back"
            android:tint="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recording Notification"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp">

            <!-- Preview Title (outside card) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_preview_title"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="6dp"/>
            <!-- Preview Card + Helper -->
            <LinearLayout
                android:id="@+id/group_card_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="16dp">
                <LinearLayout
                    android:id="@+id/notification_preview_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_group_card_bg"
                    android:padding="12dp"
                    android:alpha="0.95">
                    <TextView
                        android:id="@+id/preview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/preview_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="2dp"/>
                    <TextView
                        android:id="@+id/preview_stop_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification_stop"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_light"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/preview_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_preview_helper"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@android:color/transparent" />

            <!-- Heading for options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_options_heading"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="6dp"/>

            <!-- Configuration Group (style + hide stop) -->
            <LinearLayout
                android:id="@+id/group_card_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <LinearLayout
                    android:id="@+id/row_notification_preset"
                    style="@style/SettingsGroupRow">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_info"
                        android:tint="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/notification_style_row_title"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="?attr/colorHeading"/>
                    <TextView
                        android:id="@+id/value_notification_preset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <!-- Hide Stop Button Row (opens bottom sheet) -->
                <LinearLayout
                    android:id="@+id/row_hide_stop_button"
                    style="@style/SettingsGroupRow">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_notifications"
                        android:tint="@android:color/darker_gray"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/notification_stop_button_row_title"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="?attr/colorHeading"/>
                    <TextView
                        android:id="@+id/value_hide_stop_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
