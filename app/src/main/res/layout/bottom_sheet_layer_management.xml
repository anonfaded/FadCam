<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom sheet for layer management -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/settings_group_card_bg"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/iconLayers"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="layers"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/materialicons" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Layers"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/btnAddLayer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="add"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/materialicons"
            android:background="@drawable/settings_home_row_bg"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Layers list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp" />

</LinearLayout>
