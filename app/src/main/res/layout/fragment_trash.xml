<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.TrashFragment">

    <!-- Fixed Header -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="@drawable/header_bar_rounded_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Back"
            android:tint="@android:color/white"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/trash_fragment_title_text"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/trash_header_stats_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_stat_playback"
                    android:tint="#CCFFFFFF" />

                <TextView
                    android:id="@+id/text_trash_stat_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textColor="#CCFFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:text="5" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_photo"
                    android:tint="#CCFFFFFF" />

                <TextView
                    android:id="@+id/text_trash_stat_evidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textColor="#CCFFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:text="2" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/database_24px"
                    android:tint="#CCFFFFFF" />

                <TextView
                    android:id="@+id/text_trash_stat_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textColor="#CCFFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:text="256 MB" />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/header_action_slot"
            android:layout_width="24dp"
            android:layout_height="24dp">
            <ImageView
                android:id="@+id/action_trash_auto_delete_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="@string/trash_menu_auto_delete_settings"
                android:tint="@android:color/white"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <FrameLayout
                android:id="@+id/action_select_all_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:foreground="?attr/selectableItemBackgroundBorderless">
                <ImageView
                    android:id="@+id/action_select_all_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/picker_check_background"
                    android:visibility="invisible" />
                <ImageView
                    android:id="@+id/action_select_all_check"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avd_check_draw"
                    app:tint="?attr/colorPrimary"
                    android:visibility="invisible" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trash_filter_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="6dp"

        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorTopBar">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:requiresFadingEdge="horizontal"
                android:fadingEdgeLength="24dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:singleLine="true"
                    app:chipSpacingHorizontal="6dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_trash_all"
                        style="@style/Widget.FadCam.RecordsFilterChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/forensics_filter_all" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_trash_videos"
                        style="@style/Widget.FadCam.RecordsFilterChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_records" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_trash_evidence"
                        style="@style/Widget.FadCam.RecordsFilterChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forensics_gallery_title" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_trash_items"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/trash_filter_scroll"
        app:layout_constraintBottom_toTopOf="@id/trash_actions_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_trash" />

    <!-- Empty State View (Centred) -->
    <LinearLayout
        android:id="@+id/empty_trash_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/trash_filter_scroll"
        app:layout_constraintBottom_toTopOf="@id/trash_actions_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/empty_trash_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_no_videos"
            app:tint="#80FFFFFF"
            android:contentDescription="@string/trash_empty_icon_description"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/empty_trash_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trash_empty_text"
            android:textSize="18sp"
            android:textColor="#80FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trash_actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Auto-delete information text -->
        <TextView
            android:id="@+id/tvAutoDeleteInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="Items are automatically deleted after 30 days."
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/button_restore_selected"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/universal_restore"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/button_delete_selected_permanently"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/universal_delete"
                android:textColor="@color/colorError"
                app:strokeColor="@color/colorError"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/button_empty_all_trash"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/trash_button_empty_all_action"
                android:textColor="@color/colorError"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Gallery-style fast scroller (overlays content) -->
    <com.fadcam.ui.GalleryFastScroller
        android:id="@+id/fast_scroller"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationZ="12dp"
        app:layout_constraintTop_toBottomOf="@id/trash_filter_scroll"
        app:layout_constraintBottom_toTopOf="@id/trash_actions_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 
