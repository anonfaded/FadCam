<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/picker_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="20dp"
    android:paddingStart="14dp"
    android:paddingEnd="12dp">

    <!-- Header with close button and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <ImageView
            android:id="@+id/picker_close_btn"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:tint="?attr/pickerTextSecondary"
            android:contentDescription="@string/close" />

        <TextView
            android:id="@+id/picker_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorHeading"
            android:textAlignment="viewStart" />

    </LinearLayout>

    <View
        android:id="@+id/picker_title_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#404040"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- Scroll container to ensure long lists (e.g., zoom ratios) are scrollable -->
    <ScrollView
        android:id="@+id/picker_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="ifContentScrolls"
        android:fillViewport="true"
        android:maxHeight="700dp"
    android:clipToPadding="false"
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Card style container replicating settings group visual -->
            <LinearLayout
                android:id="@+id/picker_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <!-- Switch row styled like other settings rows -->
                <LinearLayout
                    android:id="@+id/picker_switch_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/settings_home_row_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/picker_switch_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="?attr/pickerTextPrimary"
                        android:textSize="16sp"
                        android:textAlignment="viewStart" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/picker_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Divider below switch row to match settings dividers -->
                <View
                    android:id="@+id/picker_switch_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="12dp"
                    android:background="#404040"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/picker_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Helper anchored below the scrollable options so it remains above system nav bars -->
    <TextView
        android:id="@+id/picker_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="14dp"
        android:paddingEnd="12dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        android:visibility="gone"
        android:textAlignment="viewStart"/>
</LinearLayout>
