<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/settings_home_row_bg"
    android:paddingStart="14dp"
    android:paddingEnd="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/client_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client 1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/client_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/method_badge_get"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/client_ip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="192.168.1.100"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="monospace" />

            <ImageView
                android:id="@+id/copy_ip_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_copy"
                android:tint="@android:color/darker_gray"
                android:contentDescription="Copy IP"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_logs_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Event Logs"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="6dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
