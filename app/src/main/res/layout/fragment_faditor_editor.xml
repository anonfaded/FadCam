<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:theme="@style/Theme.FadCam.Faditor"
    tools:context=".ui.faditor.FaditorEditorFragment">

    <!-- Material 3 Editor Header Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/editor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="?attr/elevationLevel2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorOnSurface"
        app:title="@string/faditor_editor_title"
        app:titleTextAppearance="?attr/textAppearanceHeadlineSmall"
        app:titleTextColor="?attr/colorOnSurface"
        style="@style/Widget.FadCam.Faditor.Toolbar">

        <!-- Material 3 Save and Export buttons in toolbar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                style="@style/Widget.FadCam.Faditor.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faditor_save"
                android:textColor="?attr/colorPrimary"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/export_button"
                style="@style/Widget.FadCam.Faditor.Button.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faditor_export"
                app:icon="@drawable/ic_export"
                app:iconTint="?attr/colorOnPrimary" />

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Material 3 Professional Editing Toolbar -->
    <com.fadcam.ui.faditor.components.ToolbarComponent
        android:id="@+id/toolbar_component"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?attr/colorSurfaceVariant"
        android:elevation="?attr/elevationLevel1"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/editor_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Video Preview Area -->
    <com.fadcam.ui.faditor.components.VideoPlayerComponent
        android:id="@+id/video_player_component"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/toolbar_component"
        app:layout_constraintBottom_toTopOf="@id/timeline_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="1" />

    <!-- Professional Playback Controls (overlay on video) -->
    <com.fadcam.ui.faditor.components.ControlsComponent
        android:id="@+id/controls_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@id/video_player_component"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Material 3 Timeline Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/timeline_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="?attr/elevationLevel2"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.FadCam.Faditor.CardView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/timeline_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Material 3 Timeline Header with Zoom Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/faditor_timeline"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Frame Counter -->
                <TextView
                    android:id="@+id/frame_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00 / 00:00"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="monospace"
                    android:background="@drawable/faditor_card_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

                <!-- Material 3 Zoom Controls -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/zoom_out_button"
                    style="@style/Widget.FadCam.Faditor.Button.Icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:icon="@drawable/ic_zoom_out"
                    app:iconSize="20dp"
                    app:iconTint="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/faditor_timeline_zoom_out" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/zoom_in_button"
                    style="@style/Widget.FadCam.Faditor.Button.Icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:icon="@drawable/ic_zoom_in"
                    app:iconSize="20dp"
                    app:iconTint="?attr/colorOnSurfaceVariant"
                    android:contentDescription="@string/faditor_timeline_zoom_in" />

            </LinearLayout>

            <!-- Professional Timeline Component -->
            <com.fadcam.ui.faditor.components.TimelineComponent
                android:id="@+id/timeline_component"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="16dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Material 3 Progress Overlay -->
    <com.fadcam.ui.faditor.components.ProgressComponent
        android:id="@+id/progress_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/progress_overlay_background"
        android:elevation="?attr/elevationLevel5"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>