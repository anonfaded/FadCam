<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Hamburger menu button -->
        <ImageView
            android:id="@+id/btnHamburgerMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="8dp"
            android:padding="2dp"
            android:src="@drawable/ic_home_hamburger"
            android:tint="@android:color/white"
            android:contentDescription="@string/home_menu"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/ivAppTitle"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:src="@drawable/menu_icon_unknown"
            app:layout_constraintBottom_toBottomOf="@id/topAppBar"
            app:layout_constraintEnd_toEndOf="@id/topAppBar"
            app:layout_constraintStart_toStartOf="@id/topAppBar"
            app:layout_constraintTop_toTopOf="@id/topAppBar" />

        <!-- Giftbox icon for Ko-fi support -->
        <ImageButton
            android:id="@+id/ivKoFiSupport"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/coffee_cup"
            android:contentDescription="@string/support_ko_fi"
            android:layout_marginEnd="8dp"
            android:scaleType="centerInside"
            android:focusable="true"
            android:clickable="true" />

    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:id="@+id/layoutCards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar">

            <androidx.cardview.widget.CardView
            android:id="@+id/cardStorage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="?attr/colorDialog"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:strokeColor="#4CAF50"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <!-- Camera Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/materialicons"
                        android:text="camera_alt"
                        android:textColor="#4CAF50"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:id="@+id/tvCameraTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rear Camera"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCameraSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4K â€¢ 60fps"
                            android:textColor="#B0B0B0"
                            android:textSize="11sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Estimated Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/materialicons"
                        android:text="schedule"
                        android:textColor="#FF9800"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:id="@+id/tvEstimateTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h 30min"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvEstimateSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimated time"
                            android:textColor="#B0B0B0"
                            android:textSize="11sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Available Space Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/materialicons"
                        android:text="storage"
                        android:textColor="#2196F3"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:id="@+id/tvSpaceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.13 GB"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSpaceSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available space"
                            android:textColor="#B0B0B0"
                            android:textSize="11sp" />

                        <!-- Dimmer smaller total storage value -->
                        <!-- total shown inline with available space (rendered programmatically) -->

                    </LinearLayout>

                </LinearLayout>

                <!-- Elapsed Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/materialicons"
                        android:text="play_arrow"
                        android:textColor="#4CAF50"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:id="@+id/tvElapsedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="#4CAF50"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvElapsedSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elapsed time"
                            android:textColor="#B0B0B0"
                            android:textSize="11sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Remaining Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/materialicons"
                        android:text="timer"
                        android:textColor="#F44336"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRemainingTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20m 27s"
                            android:textColor="#F44336"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRemainingSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remaining time"
                            android:textColor="#B0B0B0"
                            android:textSize="11sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardClock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:strokeColor="#4CAF50"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/materialicons"
                        android:text="access_time"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:id="@+id/tvClock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="top"
                            android:textColor="?attr/colorHeading" />

                        <TextView
                            android:id="@+id/tvDateEnglish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_gravity="left"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/tvDateArabic"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:strokeColor="#4CAF50"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/materialicons"
                        android:text="folder"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="0dp"
                        android:textColor="?attr/colorHeading"
                        android:text="Stats" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/layoutControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutCards"
        app:strokeColor="#4CAF50"
        app:strokeWidth="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextureView
                android:id="@+id/textureView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvPreviewPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ui_preview_area"
                android:textColor="?attr/colorOnSurface"
                android:textSize="24sp" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTorchSwitch"
            android:layout_width="48dp"
            android:layout_height="41dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:icon="@drawable/ic_flashlight_on"
            app:iconSize="24dp"
            app:iconTint="@color/button_icon_tint_selector"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            app:rippleColor="@android:color/transparent"
            app:backgroundTint="@android:color/transparent"
            android:enabled="false"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStartStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:icon="@drawable/ic_play"
            android:enabled="false"
            app:backgroundTint="@color/button_start"
            app:iconTint="@color/white"
            android:textColor="@color/white"
            android:text="@string/button_start" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPauseResume"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            app:icon="@drawable/ic_pause"
            app:iconSize="24dp"
            android:paddingLeft="12dp"
            android:paddingRight="0dp"
            android:enabled="false"
            app:backgroundTint="@color/button_pause"
            app:iconTint="@color/white"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCamSwitch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            app:icon="@drawable/cam_switch"
            app:iconSize="24dp"
            android:paddingLeft="12dp"
            android:paddingRight="0dp"
            android:enabled="false"
            app:cornerRadius="15dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
