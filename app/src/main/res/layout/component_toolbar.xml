<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingHorizontal="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tool_select"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:icon="@drawable/ic_cursor_default"
        app:iconSize="24dp"
        android:contentDescription="@string/faditor_tool_select" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tool_trim"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:icon="@drawable/ic_content_cut"
        app:iconSize="24dp"
        android:contentDescription="@string/faditor_tool_trim" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tool_split"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:icon="@drawable/ic_call_split"
        app:iconSize="24dp"
        android:contentDescription="@string/faditor_tool_split" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tool_effects"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:icon="@drawable/ic_auto_fix_high"
        app:iconSize="24dp"
        android:contentDescription="@string/faditor_tool_effects" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tool_audio"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:icon="@drawable/ic_volume_up"
        app:iconSize="24dp"
        android:contentDescription="@string/faditor_tool_audio" />

</LinearLayout>