<?xml version="1.0" encoding="utf-8"?>
<!-- activity_cloud_account.xml - WebView for FadCam Remote cloud linking -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Fixed Header with cloud branding -->
    <LinearLayout
        android:id="@+id/cloud_header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <ImageView
            android:id="@+id/cloud_back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/back"
            android:tint="@android:color/white"
            android:clickable="true"
            android:focusable="true" />
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_cloud_account"
            android:tint="#FF4444"
            android:contentDescription="@string/cloud_account_title" />
        
        <TextView
            android:id="@+id/cloud_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/cloud_account_webview_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white" />
        
        <TextView
            android:id="@+id/cloud_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#888888" />
    </LinearLayout>

    <!-- Progress bar below header -->
    <ProgressBar
        android:id="@+id/cloud_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:indeterminate="false"
        android:max="100"
        android:progressTint="#FF4444"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cloud_header_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- WebView for device linking flow -->
    <WebView
        android:id="@+id/cloud_webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cloud_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
