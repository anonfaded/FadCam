<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/settings_home_row_bg"
    android:gravity="center_vertical">

    <!-- Thumbnail -->
    <ImageView
        android:id="@+id/imgProjectThumbnail"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:background="#222222"
        android:padding="4dp" />

    <!-- Project Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/txtProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/ubuntu_regular"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/txtProjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_description_placeholder"
            android:textSize="12sp"
            android:textColor="#AAAAAA"
            android:fontFamily="@font/ubuntu_regular"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/txtProjectMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="512 KB â€¢ Oct 8, 2025 03:15"
            android:textSize="11sp"
            android:textColor="#66FFFFFF"
            android:fontFamily="@font/ubuntu_regular"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp" />

    </LinearLayout>

    <!-- Delete Button -->
    <ImageView
        android:id="@+id/btnDeleteProject"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="#F44336"
        android:padding="6dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/delete_project" />

</LinearLayout>
