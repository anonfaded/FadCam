<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Fixed Header -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="@drawable/header_bar_rounded_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            android:tint="@android:color/white"/>
        <TextView
            android:id="@+id/header_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_video_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="76dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp">

            <!-- Group Card Container -->
            <LinearLayout
                android:id="@+id/group_card_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"

>

            <!-- Camera Selection Row -->
            <LinearLayout
                android:id="@+id/row_camera_type"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_vid_cam"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_camera_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_camera_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <!-- Helper moved into dialog; reintroduce divider -->
            <View style="@style/SettingsDivider" />

            <!-- Dual Camera Settings Row (visible only when DUAL_PIP selected) -->
            <LinearLayout
                android:id="@+id/row_dual_camera_settings"
                style="@style/SettingsGroupRow"
                android:visibility="gone">
                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="picture_in_picture"
                    android:textSize="20sp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="@font/materialicons" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dual_cam_settings_row_title"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="?attr/colorHeading"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dual_cam_settings_row_subtitle"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View
                android:id="@+id/divider_dual_camera_settings"
                style="@style/SettingsDivider"
                android:visibility="gone" />

            <!-- Lens Row -->
            <LinearLayout
                android:id="@+id/row_lens"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_lens"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_lens_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_lens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Resolution Row -->
            <LinearLayout
                android:id="@+id/row_resolution"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_grid"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_resolution_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Frame Rate Row -->
            <LinearLayout
                android:id="@+id/row_framerate"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_fps"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_frame_rate_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_framerate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Codec Selection -->
            <LinearLayout
                android:id="@+id/row_codec"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_avc"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_codec_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_codec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Bitrate Row -->
            <LinearLayout
                android:id="@+id/row_bitrate"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_bitrate"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_bitrate_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_bitrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <!-- Divider removed -->

            <View style="@style/SettingsDivider" />

            <!-- Zoom Ratio Row -->
            <LinearLayout
                android:id="@+id/row_zoom_ratio"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_zoom"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_zoom_ratio_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_zoom_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Video Splitting Row -->
            <LinearLayout
                android:id="@+id/row_video_splitting"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_split_file"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_video_splitting_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_video_split_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_disabled_msg"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Orientation Row (last without trailing divider) -->
            <LinearLayout
                android:id="@+id/row_orientation"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_screen_rotation"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_orientation_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_orientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Location Embed Row -->
            <LinearLayout
                android:id="@+id/row_location_embed"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_navigation"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/video_setting_location_embed_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_location_embed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <!-- End group_card_video container -->
            </LinearLayout>
        </LinearLayout> <!-- outer padding container -->
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
