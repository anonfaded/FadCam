<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <!-- Fixed Header -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTopBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/action_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/universal_close"
            android:tint="@android:color/white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/records_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"/>

        <ImageView
            android:id="@+id/action_more_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_two_line_hamburger"
            android:contentDescription="@string/more_options"
            android:tint="@android:color/white"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        
        <FrameLayout
            android:id="@+id/action_select_all_container"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/action_select_all_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/picker_check_background" />
            <ImageView
                android:id="@+id/action_select_all_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/avd_check_draw"
                android:tint="@android:color/white"
                android:contentDescription="@string/trash_select_all" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/records_filter_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none"
            android:overScrollMode="never">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_records_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter_all"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/records_filter_all" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter_camera"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_camera" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter_screen"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_screen" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter_faditor"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_faditor" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter_stream"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_stream" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter_shot"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_shot" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/btn_filter_checklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/materialicons"
            android:text="checklist"
            android:textColor="#666666"
            android:textSize="22sp"
            android:padding="4dp"
            android:contentDescription="@string/records_filter_checklist_desc" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/records_camera_filter_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/records_filter_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_camera_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_camera_all"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/records_filter_camera_all" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_camera_back"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_camera_back" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_camera_front"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_camera_front" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_camera_dual"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_camera_dual" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/records_faditor_filter_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/records_camera_filter_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_faditor_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_faditor_all"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/records_filter_faditor_all" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_faditor_converted"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_faditor_converted" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_faditor_merge"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_faditor_merge" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/records_shot_filter_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/records_faditor_filter_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_shot_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_shot_all"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/records_filter_shot_all" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_shot_back"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_shot_back" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_shot_selfie"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_shot_selfie" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_shot_fadrec"
                    style="@style/Widget.FadCam.RecordsFilterChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/records_filter_shot_fadrec" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/filter_helper_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="8dp"
        android:textColor="#99FFFFFF"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/records_shot_filter_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Normal camera recordings" />

    <HorizontalScrollView
        android:id="@+id/selection_actions_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/filter_helper_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btn_action_select_all"
                style="@style/RecordsActionPill" />

            <TextView
                android:id="@+id/btn_action_batch_save"
                style="@style/RecordsActionPill"
                android:text="@string/records_batch_save" />

            <TextView
                android:id="@+id/btn_action_batch_faditor"
                style="@style/RecordsActionPill"
                android:text="@string/records_batch_faditor" />

            <TextView
                android:id="@+id/btn_action_batch_delete"
                style="@style/RecordsActionPill"
                android:text="@string/records_batch_delete" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- *** START: Loading Indicator *** -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/selection_actions_row"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"/>
    <!-- *** END: Loading Indicator *** -->


    <!-- Empty State View (Centred) -->
    <LinearLayout
        android:id="@+id/empty_state_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/selection_actions_row"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"> <!-- Initially hidden -->
        <ImageView
            android:id="@+id/empty_state_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_no_videos"
            app:tint="#80FFFFFF"
            android:contentDescription="@string/no_videos_found"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/empty_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_recordings_yet"
            android:textSize="18sp"
            android:textColor="#80FFFFFF"
            android:gravity="center"/>
    </LinearLayout>


    <!-- RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/selection_actions_row"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_records"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:visibility="gone"/> <!-- Initially hidden -->

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <!-- FABs -->
    <!-- Removed: View mode FAB moved to Records Options side sheet -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_delete_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:contentDescription="@string/records_batch_actions_title"
        android:text="@string/records_batch_fab_label"
        app:icon="@drawable/ic_list"
        app:backgroundTint="?attr/colorPrimary"
        app:iconTint="@android:color/white"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Navigation FAB for scroll to top/bottom (mini size, circular, dark gray) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_scroll_navigation"
        style="?attr/floatingActionButtonSmallStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:useCompatPadding="true"
        app:backgroundTint="@color/gray_button_filled"
        app:srcCompat="@drawable/ic_double_chevron"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/scroll_to_top"
        android:rotation="-90" />

    <!-- Fix Start: AppLock full-screen overlay (initially gone)  -->
    <FrameLayout
        android:id="@+id/applock_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000"
        android:visibility="gone"
        android:elevation="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--  Fix End: AppLock full-screen overlay -->

</androidx.constraintlayout.widget.ConstraintLayout>
