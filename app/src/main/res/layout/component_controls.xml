<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/controls_background"
    android:paddingHorizontal="24dp"
    android:paddingVertical="12dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seek_back_button"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:icon="@drawable/ic_replay_10"
        app:iconSize="24dp"
        app:iconTint="@android:color/white"
        android:contentDescription="@string/faditor_seek_backward" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_pause_button"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        app:icon="@drawable/ic_play_arrow_24"
        app:iconSize="32dp"
        app:iconTint="@android:color/black"
        android:contentDescription="@string/faditor_play_pause" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seek_forward_button"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:icon="@drawable/ic_forward_10"
        app:iconSize="24dp"
        app:iconTint="@android:color/white"
        android:contentDescription="@string/faditor_seek_forward" />

</LinearLayout>