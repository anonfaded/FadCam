<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/picker_bottom_sheet_dark_gradient_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Endpoints"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorHeading"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access your streaming server via these HTTP endpoints"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <!-- GET Endpoints Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET Requests"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/get_endpoints_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/settings_group_card_bg"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="16dp" />

    <!-- POST Endpoints Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST Requests (Remote Control)"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control FadCam remotely via API calls"
        android:textSize="11sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/post_endpoints_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/settings_group_card_bg"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

    </LinearLayout>

</ScrollView>
