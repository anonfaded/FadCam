<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/floating_menu_bg"
    android:padding="8dp"
    android:minWidth="240dp">

    <!-- Header with close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/floating_menu_title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/btnCloseMenu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="close"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/materialicons"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Recording Controls Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/floating_button_item_bg"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recording_controls"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#B0FFFFFF"
            android:paddingBottom="8dp" />

        <!-- Recording Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Start/Stop Button -->
            <LinearLayout
                android:id="@+id/btnStartStopRec"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="64dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp"
                android:background="@drawable/floating_button_item_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/iconStartStop"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="fiber_manual_record"
                    android:textSize="24sp"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/materialicons" />

                <TextView
                    android:id="@+id/labelStartStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/floating_menu_start_short"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Pause/Resume Button -->
            <LinearLayout
                android:id="@+id/btnPauseResumeRec"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="64dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp"
                android:background="@drawable/floating_button_item_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="4dp">

                <TextView
                    android:id="@+id/iconPauseResume"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="pause"
                    android:textSize="24sp"
                    android:textColor="#FF9800"
                    android:fontFamily="@font/materialicons" />

                <TextView
                    android:id="@+id/labelPauseResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/floating_menu_pause"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Annotations Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Annotations Header (Expandable) -->
        <LinearLayout
            android:id="@+id/annotationsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="edit"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/materialicons"
                android:layout_marginEnd="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/annotations"
                android:textSize="13sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/annotationsExpandIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="expand_more"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/materialicons" />
        </LinearLayout>

        <!-- Annotations Content (Expandable) -->
        <LinearLayout
            android:id="@+id/annotationsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:visibility="gone">

            <!-- Enable Annotations Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_annotations"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/annotationSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchTheme" />
            </LinearLayout>

            <!-- Snap Guides Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="grid_on"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/materialicons"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/snap_guides"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/snapGuidesSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchTheme"
                    android:checked="true" />
            </LinearLayout>

            <!-- Add Text Button -->
            <LinearLayout
                android:id="@+id/btnAddText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="title"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/materialicons"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_text"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Add Shape Button -->
            <LinearLayout
                android:id="@+id/btnAddShape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="crop_square"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/materialicons"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_shape"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
