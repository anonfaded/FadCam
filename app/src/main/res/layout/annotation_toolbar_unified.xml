<?xml version="1.0" encoding="utf-8"?>
<!-- Unified Toolbar: Recording Controls + Annotations in ONE expandable overlay -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:background="@drawable/floating_menu_bg" android:padding="8dp">

    <!-- Compact Header (always visible) -->
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center">

        <!-- Expand/Collapse Arrow (just the arrow, no labels) -->
        <TextView android:id="@+id/btnExpandCollapse" android:layout_width="40dp" android:layout_height="40dp" android:gravity="center" android:text="chevron_right" android:textSize="24sp" android:textColor="#FFFFFF" android:fontFamily="@font/materialicons" android:background="@drawable/floating_button_item_bg" android:clickable="true" android:focusable="true" android:layout_margin="2dp" />

        <!-- Close Button -->
        <TextView android:id="@+id/btnCloseAnnotation" android:layout_width="40dp" android:layout_height="40dp" android:gravity="center" android:text="close" android:textSize="24sp" android:textColor="#FF6B6B" android:fontFamily="@font/materialicons" android:background="@drawable/floating_button_item_bg" android:clickable="true" android:focusable="true" android:layout_margin="2dp" android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Expandable Content (hidden by default) -->
    <LinearLayout android:id="@+id/expandableContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:visibility="gone">

        <!-- Divider -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#30FFFFFF" android:layout_marginVertical="8dp" />

        <!-- RECORDING CONTROLS SECTION -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="4dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/recording_controls" android:textSize="12sp" android:textStyle="bold" android:textColor="#FFFFFF" android:paddingStart="4dp" android:paddingBottom="8dp" android:drawablePadding="6dp" android:gravity="center_vertical" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:paddingHorizontal="4dp">

                <!-- Start/Stop Button -->
                <LinearLayout android:id="@+id/btnStartStopRec" android:layout_width="0dp" android:layout_height="64dp" android:layout_weight="1" android:orientation="vertical" android:gravity="center" android:padding="8dp" android:background="@drawable/floating_button_item_bg" android:clickable="true" android:focusable="true" android:layout_margin="4dp">

                    <TextView android:id="@+id/iconStartStop" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="fiber_manual_record" android:textSize="28sp" android:textColor="#4CAF50" android:fontFamily="@font/materialicons" />

                    <TextView android:id="@+id/labelStartStop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/floating_menu_start_short" android:textSize="11sp" android:textStyle="bold" android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- Pause/Resume Button -->
                <LinearLayout android:id="@+id/btnPauseResumeRec" android:layout_width="0dp" android:layout_height="64dp" android:layout_weight="1" android:orientation="vertical" android:gravity="center" android:padding="8dp" android:background="@drawable/floating_button_item_bg" android:clickable="true" android:focusable="true" android:layout_margin="4dp">

                    <TextView android:id="@+id/iconPauseResume" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="pause" android:textSize="28sp" android:textColor="#FF9800" android:fontFamily="@font/materialicons" />

                    <TextView android:id="@+id/labelPauseResume" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/floating_menu_pause" android:textSize="11sp" android:textStyle="bold" android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#30FFFFFF" android:layout_marginVertical="8dp" />

        <!-- ANNOTATION TOOLS SECTION -->
        <LinearLayout android:id="@+id/annotationsHeader" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingStart="8dp" android:paddingEnd="8dp" android:paddingTop="6dp" android:paddingBottom="6dp" android:background="?android:attr/selectableItemBackground" android:clickable="true" android:focusable="true">

            <TextView android:layout_width="24dp" android:layout_height="24dp" android:gravity="center" android:text="edit" android:textSize="20sp" android:textColor="#FFFFFF" android:fontFamily="@font/materialicons" android:layout_marginEnd="8dp" />

            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/annotation_tools" android:textSize="12sp" android:textStyle="bold" android:textColor="#FFFFFF" />
 android:textColor="#B0FFFFFF" />

            <TextView android:id="@+id/annotationsExpandIcon" android:layout_width="20dp" android:layout_height="20dp" android:gravity="center" android:text="expand_more" android:textSize="18sp" android:textColor="#FFFFFF" android:fontFamily="@font/materialicons" />
        </LinearLayout>

        <!-- Annotation Tools Content (Expandable) -->
        <LinearLayout android:id="@+id/annotationsContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:paddingStart="8dp" android:paddingEnd="8dp" android:visibility="gone">

            <!-- Snap Guides Switch -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingTop="6dp" android:paddingBottom="6dp">

                <TextView android:layout_width="20dp" android:layout_height="20dp" android:gravity="center" android:text="grid_on" android:textSize="14sp" android:textColor="#FFFFFF" android:fontFamily="@font/materialicons" android:layout_marginEnd="8dp" />

                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/snap_guides" android:textSize="11sp" android:textColor="#FFFFFF" />

                <androidx.appcompat.widget.SwitchCompat android:id="@+id/snapGuidesSwitch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:theme="@style/SwitchTheme" android:checked="true" />
            </LinearLayout>

            <!-- Undo/Redo Row -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:paddingTop="4dp">

                <!-- Undo -->
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:layout_margin="2dp">

                    <TextView android:id="@+id/btnUndo" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="undo" android:textSize="18sp" android:textColor="#FFFFFF" android:fontFamily="@font/materialicons" android:background="@drawable/floating_button_item_bg" android:clickable="true" android:focusable="true" android:alpha="0.5" />

                    <TextView android:id="@+id/txtUndoCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textSize="8sp" android:textColor="#9E9E9E" android:gravity="center" android:layout_marginTop="1dp" />
                </LinearLayout>

                <!-- Redo -->
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:layout_margin="2dp">

                    <TextView android:id="@+id/btnRedo" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="redo" android:textSize="18sp" android:textColor="#FFFFFF" android:fontFamily="@font/materialicons" android:background="@drawable/floating_button_item_bg" android:clickable="true" android:focusable="true" android:alpha="0.5" />

                    <TextView android:id="@+id/txtRedoCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textSize="8sp" android:textColor="#9E9E9E" android:gravity="center" android:layout_marginTop="1dp" />
                </LinearLayout>

                <!-- Pages -->
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:layout_margin="2dp">

                    <TextView android:id="@+id/btnPages" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="tab" android:textSize="18sp" android:textColor="#FFFFFF" android:fontFamily="@font/materialicons" android:background="@drawable/floating_button_item_bg" android:clickable="true" android:focusable="true" />

                    <TextView android:id="@+id/txtPageInfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1/1" android:textSize="8sp" android:textColor="#4CAF50" android:gravity="center" android:layout_marginTop="1dp" />
                </LinearLayout>

                <!-- Layers -->
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:layout_margin="2dp">

                    <TextView android:id="@+id/btnLayers" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="layers" android:textSize="18sp" android:textColor="#FFFFFF" android:fontFamily="@font/materialicons" android:background="@drawable/floating_button_item_bg" android:clickable="true" android:focusable="true" />

                    <TextView android:id="@+id/txtLayerInfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="L1" android:textSize="8sp" android:textColor="#2196F3" android:gravity="center" android:layout_marginTop="1dp" />
                </LinearLayout>

                <!-- Clear All -->
                <TextView android:id="@+id/btnClearAll" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="delete_sweep" android:textSize="18sp" android:textColor="#FF5252" android:fontFamily="@font/materialicons" android:background="@drawable/floating_button_item_bg" android:clickable="true" android:focusable="true" android:layout_margin="2dp" />
            </LinearLayout>

            <!-- Tools Row -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:paddingTop="4dp" android:paddingBottom="4dp">

                <!-- Select Tool -->
                <LinearLayout android:id="@+id/btnSelectTool" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="3dp" android:clickable="true" android:focusable="true" android:background="?android:attr/selectableItemBackground">

                    <TextView android:id="@+id/iconSelectTool" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="pan_tool" android:textSize="20sp" android:textColor="#4CAF50" android:fontFamily="@font/materialicons" android:background="@drawable/annotation_tool_bg" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Select" android:textSize="8sp" android:textColor="#FFFFFF" android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Pen Tool -->
                <LinearLayout android:id="@+id/btnPenTool" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="3dp" android:clickable="true" android:focusable="true" android:background="?android:attr/selectableItemBackground">

                    <TextView android:id="@+id/iconPenTool" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="edit" android:textSize="20sp" android:textColor="#4CAF50" android:fontFamily="@font/materialicons" android:background="@drawable/annotation_tool_bg" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pen" android:textSize="8sp" android:textColor="#FFFFFF" android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Eraser Tool -->
                <LinearLayout android:id="@+id/btnEraserTool" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="3dp" android:clickable="true" android:focusable="true" android:background="?android:attr/selectableItemBackground">

                    <TextView android:id="@+id/iconEraserTool" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="ink_eraser" android:textSize="20sp" android:textColor="#FFFFFF" android:fontFamily="@font/materialicons" android:background="@drawable/annotation_tool_bg" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Erase" android:textSize="8sp" android:textColor="#FFFFFF" android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Text Tool -->
                <LinearLayout android:id="@+id/btnTextTool" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="3dp" android:clickable="true" android:focusable="true" android:background="?android:attr/selectableItemBackground">

                    <TextView android:id="@+id/iconTextTool" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="text_fields" android:textSize="20sp" android:textColor="#FFEB3B" android:fontFamily="@font/materialicons" android:background="@drawable/annotation_tool_bg" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Text" android:textSize="8sp" android:textColor="#FFFFFF" android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Shape Tool -->
                <LinearLayout android:id="@+id/btnShapeTool" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:padding="3dp" android:clickable="true" android:focusable="true" android:background="?android:attr/selectableItemBackground">

                    <TextView android:id="@+id/iconShapeTool" android:layout_width="32dp" android:layout_height="32dp" android:gravity="center" android:text="category" android:textSize="20sp" android:textColor="#FF5722" android:fontFamily="@font/materialicons" android:background="@drawable/annotation_tool_bg" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Shape" android:textSize="8sp" android:textColor="#FFFFFF" android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Colors -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:paddingTop="4dp">

                <View android:id="@+id/btnColorRed" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="3dp" android:background="@drawable/annotation_color_circle" android:backgroundTint="#F44336" android:clickable="true" android:focusable="true" />

                <View android:id="@+id/btnColorBlue" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="3dp" android:background="@drawable/annotation_color_circle" android:backgroundTint="#2196F3" android:clickable="true" android:focusable="true" />

                <View android:id="@+id/btnColorGreen" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="3dp" android:background="@drawable/annotation_color_circle" android:backgroundTint="#4CAF50" android:clickable="true" android:focusable="true" />

                <View android:id="@+id/btnColorYellow" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="3dp" android:background="@drawable/annotation_color_circle" android:backgroundTint="#FFEB3B" android:clickable="true" android:focusable="true" />

                <View android:id="@+id/btnColorWhite" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="3dp" android:background="@drawable/annotation_color_circle" android:backgroundTint="#FFFFFF" android:clickable="true" android:focusable="true" />

                <View android:id="@+id/btnColorBlack" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="3dp" android:background="@drawable/annotation_color_circle" android:backgroundTint="#000000" android:clickable="true" android:focusable="true" />
            </LinearLayout>

            <!-- Stroke Widths -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:paddingTop="4dp" android:paddingBottom="6dp">

                <View android:id="@+id/btnWidthThin" android:layout_width="10dp" android:layout_height="10dp" android:layout_margin="6dp" android:background="@drawable/annotation_width_circle" android:clickable="true" android:focusable="true" />

                <View android:id="@+id/btnWidthMedium" android:layout_width="16dp" android:layout_height="16dp" android:layout_margin="6dp" android:background="@drawable/annotation_width_circle" android:clickable="true" android:focusable="true" />

                <View android:id="@+id/btnWidthThick" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="6dp" android:background="@drawable/annotation_width_circle" android:clickable="true" android:focusable="true" />
            </LinearLayout>

            <!-- Blackboard Toggle -->
            <LinearLayout android:id="@+id/btnBlackboardToggle" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingTop="4dp" android:paddingBottom="4dp" android:clickable="true" android:focusable="true" android:background="?android:attr/selectableItemBackground">

                <TextView android:id="@+id/iconBlackboardToggle" android:layout_width="20dp" android:layout_height="20dp" android:gravity="center" android:text="square" android:textSize="16sp" android:textColor="#9E9E9E" android:fontFamily="@font/materialicons" android:layout_marginEnd="8dp" />

                <TextView android:id="@+id/labelBlackboardToggle" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Board" android:textSize="11sp" android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
