<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:theme="@style/Theme.FadCam.Faditor">

    <!-- Material 3 Header bar with search and view mode toggle -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/header_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="?attr/elevationLevel2"
        app:title="@string/nav_faditor_mini"
        app:titleTextAppearance="?attr/textAppearanceHeadlineSmall"
        app:titleTextColor="?attr/colorOnSurface"
        style="@style/Widget.FadCam.Faditor.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Action buttons in toolbar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp">

            <!-- View mode toggle button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_mode_button"
                style="@style/Widget.FadCam.Faditor.Button.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_view_grid"
                app:iconTint="?attr/colorOnSurface"
                android:contentDescription="@string/faditor_view_mode_grid" />

            <!-- New project button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/new_project_button"
                style="@style/Widget.FadCam.Faditor.Button.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_add"
                app:iconTint="?attr/colorOnSurface"
                android:contentDescription="@string/faditor_create_project" />

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Material 3 Search Container -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/header_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Material 3 Search bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="?attr/colorSurfaceVariant"
            app:boxCornerRadiusTopStart="28dp"
            app:boxCornerRadiusTopEnd="28dp"
            app:boxCornerRadiusBottomStart="28dp"
            app:boxCornerRadiusBottomEnd="28dp"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="?attr/colorOnSurfaceVariant"
            app:endIconMode="clear_text"
            app:endIconTint="?attr/colorOnSurfaceVariant"
            app:hintTextColor="?attr/colorOnSurfaceVariant"
            style="@style/Widget.FadCam.Faditor.TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/faditor_search_projects"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Main content area -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Material 3 Empty state (shown when no projects exist) -->
        <LinearLayout
            android:id="@+id/empty_state_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/unknown_icon3"
                android:alpha="0.6"
                android:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="@string/faditor_mini_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/faditor_no_projects_title"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?attr/colorOnSurface"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/faditor_no_projects_subtitle"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAlignment="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/empty_state_create_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/faditor_create_project"
                app:icon="@drawable/ic_add"
                style="@style/Widget.FadCam.Faditor.Button.Filled" />

        </LinearLayout>

        <!-- Project browser -->
        <LinearLayout
            android:id="@+id/projects_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Material 3 Filter and sort controls -->
            <LinearLayout
                android:id="@+id/filter_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:background="?attr/colorSurface">

                <TextView
                    android:id="@+id/projects_count_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/faditor_projects_count"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <!-- Sort button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sort_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faditor_sort_projects"
                    app:icon="@drawable/ic_sort"
                    app:iconTint="?attr/colorOnSurfaceVariant"
                    style="@style/Widget.FadCam.Faditor.Button.Text" />

            </LinearLayout>

            <!-- Projects RecyclerView -->
            <com.fadcam.ui.faditor.components.ProjectBrowserComponent
                android:id="@+id/projects_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false" />

        </LinearLayout>

    </FrameLayout>

    <!-- Material 3 Floating Action Button for quick project creation -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_new_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_add"
        app:tint="?attr/colorOnPrimaryContainer"
        app:backgroundTint="?attr/colorPrimaryContainer"
        app:elevation="?attr/elevationLevel3"
        app:hoveredFocusedTranslationZ="?attr/elevationLevel4"
        app:pressedTranslationZ="?attr/elevationLevel3"
        style="@style/Widget.FadCam.Faditor.FloatingActionButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/faditor_create_project" />

</androidx.constraintlayout.widget.ConstraintLayout>