<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/settings_group_card_bg"
    android:orientation="vertical"
    android:padding="7dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="136dp">

        <ImageView
            android:id="@+id/image_gallery_snapshot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/motion_lab_frame_bg"
            android:clipToOutline="true"
            android:contentDescription="@string/forensics_event_proof_frame"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_photo" />

        <TextView
            android:id="@+id/text_gallery_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="5dp"
            android:background="@drawable/serial_number_bg"
            android:paddingHorizontal="4dp"
            android:paddingVertical="1dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/selection_dim_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B5000000"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/file_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="6dp"
            android:background="@drawable/file_size_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp">

            <TextView
                android:id="@+id/text_gallery_overlay_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_gallery_overlay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/icon_check_container"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:visibility="gone">

            <View
                android:id="@+id/icon_check_bg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/picker_check_background" />

            <ImageView
                android:id="@+id/icon_check"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:alpha="0.0"
                android:scaleX="0"
                android:scaleY="0"
                android:src="@drawable/avd_check_draw"
                android:tint="?attr/colorPrimary" />
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/text_gallery_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="3"
        android:minLines="2"
        android:textColor="?attr/colorHeading"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_gallery_meta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:minLines="2"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp" />

</LinearLayout>
