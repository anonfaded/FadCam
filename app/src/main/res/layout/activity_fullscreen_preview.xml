<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullscreenRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextureView
        android:id="@+id/fullscreenTextureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/fullscreen_dock_bg"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/fullscreen_preview_close"
            android:focusable="true"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvFullscreenTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/fullscreen_preview_enter"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTapFocusToggle"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:contentDescription="@string/fullscreen_focus_toggle"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/fullscreen_focus_on"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:backgroundTint="#66101418"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_focus_target"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconSize="18dp"
            app:iconTint="@android:color/white"
            app:rippleColor="#33FFFFFF"
            app:strokeColor="#33FFFFFF"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/bottomDock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fullscreen_dock_bg"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="10dp"
            android:paddingEnd="8dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFullscreenCamSwitch"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/fullscreen_camera_switch"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    app:backgroundTint="#5A0D1015"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/cam_switch"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="22dp"
                    app:iconTint="@android:color/white"
                    app:rippleColor="#33FFFFFF"
                    app:strokeColor="#2AFFFFFF"
                    app:strokeWidth="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/fullscreen_label_switch"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFullscreenTorch"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/fullscreen_torch"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    app:backgroundTint="#5A0D1015"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_flashlight_on"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="22dp"
                    app:iconTint="@android:color/white"
                    app:rippleColor="#33FFFFFF"
                    app:strokeColor="#2AFFFFFF"
                    app:strokeWidth="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/fullscreen_label_torch"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFullscreenPauseResume"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/button_pause"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    app:backgroundTint="#5A0D1015"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_pause"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="22dp"
                    app:iconTint="@android:color/white"
                    app:rippleColor="#33FFFFFF"
                    app:strokeColor="#2AFFFFFF"
                    app:strokeWidth="1dp" />

                <TextView
                    android:id="@+id/labelPauseResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/button_pause"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tile_af_toggle"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/fullscreen_control_chip_bg"
                    android:clickable="true"
                    android:contentDescription="@string/af_mode_title"
                    android:focusable="true"
                    android:fontFamily="@font/materialicons"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="center_focus_strong"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/fullscreen_label_af"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tile_exp"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/fullscreen_control_chip_bg"
                    android:clickable="true"
                    android:contentDescription="@string/exposure_title"
                    android:focusable="true"
                    android:fontFamily="@font/materialicons"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="exposure"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/labelExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/fullscreen_label_exposure"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tile_zoom"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/fullscreen_control_chip_bg"
                    android:clickable="true"
                    android:contentDescription="@string/zoom_slider_title"
                    android:focusable="true"
                    android:fontFamily="@font/materialicons"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="zoom_in"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/labelZoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/fullscreen_label_zoom"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
