<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullscreenRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextureView
        android:id="@+id/fullscreenTextureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/viewFullscreenIdleMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivFullscreenBubbleBackground"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:alpha="0.15"
        android:contentDescription="Fullscreen bubble background"
        android:scaleType="fitCenter"
        android:src="@drawable/bubble_shape"
        android:tint="#B3FFFFFF"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivFullscreenCameraIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:alpha="0.35"
        android:contentDescription="Fullscreen camera icon"
        android:scaleType="fitCenter"
        android:src="@drawable/cctv"
        android:tint="#B3FFFFFF"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textFullscreenPreviewHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="154dp"
        android:background="@drawable/fullscreen_dock_bg"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp"
        android:text="Long press to start live preview"
        android:textColor="#E6FFFFFF"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/containerZoomHud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/fullscreen_icon_bg"
        android:elevation="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textZoomHud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0x"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/containerZoomMap"
            android:layout_width="42dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:background="@drawable/fullscreen_icon_bg">

            <View
                android:id="@+id/viewZoomMapViewport"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="@drawable/fadcam_zoom_viewport_indicator" />
        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnZoomReset"
            style="@style/Widget.Material3.Button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/zoom_slider_title"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            app:backgroundTint="#5A0D1015"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_zoom_out_map"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="18dp"
            app:iconTint="@android:color/white"
            app:rippleColor="#33FFFFFF"
            app:strokeColor="#2AFFFFFF"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/fullscreen_dock_bg"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/fullscreen_preview_close"
            android:focusable="true"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvFullscreenTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/fullscreen_preview_enter"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTapFocusToggle"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:contentDescription="@string/fullscreen_focus_toggle"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/fullscreen_focus_on"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:backgroundTint="#66101418"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_focus_target"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconSize="18dp"
            app:iconTint="@android:color/white"
            app:rippleColor="#33FFFFFF"
            app:strokeColor="#33FFFFFF"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/bottomDock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fullscreen_dock_bg"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="10dp"
            android:paddingEnd="8dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFullscreenCamSwitch"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/fullscreen_camera_switch"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    app:backgroundTint="#5A0D1015"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/cam_switch"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="22dp"
                    app:iconTint="@android:color/white"
                    app:rippleColor="#33FFFFFF"
                    app:strokeColor="#2AFFFFFF"
                    app:strokeWidth="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/fullscreen_label_switch"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFullscreenTorch"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/fullscreen_torch"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    app:backgroundTint="#5A0D1015"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_flashlight_on"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="22dp"
                    app:iconTint="@android:color/white"
                    app:rippleColor="#33FFFFFF"
                    app:strokeColor="#2AFFFFFF"
                    app:strokeWidth="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/fullscreen_label_torch"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFullscreenPauseResume"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/button_pause"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    app:backgroundTint="#5A0D1015"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_pause"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="22dp"
                    app:iconTint="@android:color/white"
                    app:rippleColor="#33FFFFFF"
                    app:strokeColor="#2AFFFFFF"
                    app:strokeWidth="1dp" />

                <TextView
                    android:id="@+id/labelPauseResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/button_pause"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tile_af_toggle"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/fullscreen_control_chip_bg"
                    android:clickable="true"
                    android:contentDescription="@string/af_mode_title"
                    android:focusable="true"
                    android:fontFamily="@font/materialicons"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="center_focus_strong"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/fullscreen_label_af"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tile_exp"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/fullscreen_control_chip_bg"
                    android:clickable="true"
                    android:contentDescription="@string/exposure_title"
                    android:focusable="true"
                    android:fontFamily="@font/materialicons"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="exposure"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/labelExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/fullscreen_label_exposure"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tile_zoom"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/fullscreen_control_chip_bg"
                    android:clickable="true"
                    android:contentDescription="@string/zoom_slider_title"
                    android:focusable="true"
                    android:fontFamily="@font/materialicons"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="zoom_in"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/labelZoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/fullscreen_label_zoom"
                    android:textColor="#B3FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/containerFullscreenMirror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="122dp"
        android:elevation="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFullscreenMirror"
            style="@style/Widget.Material3.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/front_video_mirror_enable"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            app:backgroundTint="#5A0D1015"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_mirror_video"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="22dp"
            app:iconTint="@android:color/white"
            app:rippleColor="#33FFFFFF"
            app:strokeColor="#2AFFFFFF"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/labelFullscreenMirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/fullscreen_label_mirror"
            android:textColor="#B3FFFFFF"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerFullscreenShot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="122dp"
        android:elevation="12dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFullscreenCaptureShot"
            style="@style/Widget.Material3.Button"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:contentDescription="@string/shortcut_take_photo"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            app:backgroundTint="#7A0D1015"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_camera"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:iconTint="@android:color/white"
            app:rippleColor="#33FFFFFF"
            app:strokeColor="#2AFFFFFF"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/labelFullscreenShot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/fullscreen_label_shot"
            android:textColor="#B3FFFFFF"
            android:textSize="10sp" />
    </LinearLayout>

</FrameLayout>
