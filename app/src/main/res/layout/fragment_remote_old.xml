<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Fixed Header (non-scrolling, matches Settings) -->
    <LinearLayout
        android:id="@+id/fixed_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="@drawable/header_bar_rounded_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stream_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="76dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/fixed_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <!-- Server Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_server_status"
                        android:textSize="14sp"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_inactive"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <!-- Status Indicator Dot with Glow -->
                <FrameLayout
                    android:id="@+id/glow_container"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp">

                    <View
                        android:id="@+id/status_glow"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:background="@drawable/status_glow_pulse"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/status_indicator_dot"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/status_dot_inactive" />
                </FrameLayout>
            </LinearLayout>

            <!-- Start Server Toggle Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_start_server"
                        android:textSize="14sp"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/streaming_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Server Endpoints Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stream_endpoints"
                android:textSize="12sp"
                android:textColor="?attr/sectionHeaderColor"
                android:textStyle="bold"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="8dp" />

            <!-- HLS Stream URL -->
            <LinearLayout
                android:id="@+id/url_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_endpoint_hls"
                        android:textSize="11sp"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stream_url_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="http://192.168.1.100:8080/live.m3u8"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp"
                        android:textColor="?attr/colorHeading"
                        android:fontFamily="monospace"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/copy_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_copy"
                    android:contentDescription="@string/stream_copy_url"
                    android:scaleType="centerInside"
                    android:tint="?attr/colorHeading"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Server Root URL -->
            <LinearLayout
                android:id="@+id/root_url_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_endpoint_root"
                        android:textSize="11sp"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/root_url_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="http://192.168.1.100:8080/"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp"
                        android:textColor="?attr/colorHeading"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/copy_root_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_copy"
                    android:contentDescription="@string/stream_copy_url"
                    android:scaleType="centerInside"
                    android:tint="?attr/colorHeading"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Recording Mode Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stream_recording_mode"
                android:textSize="12sp"
                android:textColor="?attr/sectionHeaderColor"
                android:textStyle="bold"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="8dp" />

            <!-- Recording Mode Rows -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Stream Only -->
                <LinearLayout
                    android:id="@+id/mode_stream_only"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/settings_home_row_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_marginBottom="6dp">

                    <RadioButton
                        android:id="@+id/mode_stream_only_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stream_only"
                            android:textSize="14sp"
                            android:textColor="?attr/colorHeading"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stream_no_save"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Stream and Save -->
                <LinearLayout
                    android:id="@+id/mode_stream_and_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/settings_home_row_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/mode_stream_and_save_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stream_and_save"
                            android:textSize="14sp"
                            android:textColor="?attr/colorHeading"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stream_save_videos"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Server Health Section -->
            <LinearLayout
                android:id="@+id/health_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_server_health"
                    android:textSize="12sp"
                    android:textColor="?attr/sectionHeaderColor"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/uptime_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading"
                    android:paddingBottom="6dp" />

                <TextView
                    android:id="@+id/connections_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading"
                    android:paddingBottom="6dp" />

                <TextView
                    android:id="@+id/fragments_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading" />
            </LinearLayout>

            <!-- Stream Specs Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stream_specs"
                android:textSize="12sp"
                android:textColor="?attr/sectionHeaderColor"
                android:textStyle="bold"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="8dp" />

            <!-- Stream Specs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/fps_resolution_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading"
 />

                <TextView
                    android:id="@+id/bitrate_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading"
 />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_codec"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading" />
            </LinearLayout>

            <!-- How to Use Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stream_instructions"
                android:textSize="12sp"
                android:textColor="?attr/sectionHeaderColor"
                android:textStyle="bold"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="8dp" />

            <!-- How to Use Instructions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_instr_1"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading"
                    android:paddingBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_instr_2"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading"
                    android:paddingBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_instr_3"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading"
                    android:paddingBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_instr_4"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading" />
            </LinearLayout>

            <!-- Network Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_wifi"
                    android:tint="@android:color/darker_gray"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="WiFi" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/stream_network_info"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
