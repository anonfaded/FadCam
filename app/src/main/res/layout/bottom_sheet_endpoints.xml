<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Endpoints"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorHeading"
        android:layout_marginBottom="16dp" />

    <!-- GET Endpoints Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET Requests"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/settings_group_card_bg"


        android:layout_marginBottom="16dp">

        <!-- Root Endpoint -->
        <LinearLayout
            android:id="@+id/endpoint_root"
            style="@style/SettingsGroupRow"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/endpoint_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GET"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/method_badge_get"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/endpoint_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Server Root"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />
                </LinearLayout>

                <TextView
                    android:id="@+id/endpoint_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="http://192.168.1.100:8080/"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="monospace"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <ImageView
                android:id="@+id/endpoint_copy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_copy"
                android:tint="@android:color/darker_gray"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:padding="2dp" />
        </LinearLayout>

        <!-- Live Stream Endpoint -->
        <LinearLayout
            android:id="@+id/endpoint_live"
            style="@style/SettingsGroupRow"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GET"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/method_badge_get"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live Stream"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/live.m3u8"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_copy"
                android:tint="@android:color/darker_gray"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:padding="2dp" />
        </LinearLayout>

        <!-- Status Endpoint -->
        <LinearLayout
            android:id="@+id/endpoint_status"
            style="@style/SettingsGroupRow"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GET"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/method_badge_get"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status API"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/status"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_copy"
                android:tint="@android:color/darker_gray"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:padding="2dp" />
        </LinearLayout>

        <!-- Init Segment Endpoint -->
        <LinearLayout
            android:id="@+id/endpoint_init"
            style="@style/SettingsGroupRow"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GET"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/method_badge_get"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Init Segment"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/init.mp4"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_copy"
                android:tint="@android:color/darker_gray"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:padding="2dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- POST Endpoints Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST Requests"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/settings_group_card_bg"

>

        <!-- Torch Toggle Endpoint -->
        <LinearLayout
            android:id="@+id/endpoint_torch"
            style="@style/SettingsGroupRow"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POST"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/method_badge_post"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Torch Toggle"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/torch/toggle"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_copy"
                android:tint="@android:color/darker_gray"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:padding="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
