<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/settings_home_row_bg"
    android:paddingStart="14dp"
    android:paddingEnd="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Method Badge -->
            <TextView
                android:id="@+id/endpoint_method_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginEnd="8dp" />

            <!-- Endpoint Label -->
            <TextView
                android:id="@+id/endpoint_label_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Root"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading" />
        </LinearLayout>

        <!-- Endpoint URL -->
        <TextView
            android:id="@+id/endpoint_url_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://192.168.1.100:8080/"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Copy Button -->
    <ImageView
        android:id="@+id/endpoint_copy_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_content_copy"
        android:contentDescription="Copy URL"
        android:scaleType="centerInside"
        android:tint="@android:color/darker_gray"
        android:layout_marginStart="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp" />

</LinearLayout>
