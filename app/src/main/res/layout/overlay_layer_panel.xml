<?xml version="1.0" encoding="utf-8"?>
<!-- Layer panel overlay on the side of screen -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:maxHeight="500dp"
    android:orientation="vertical"
    android:background="@drawable/floating_menu_bg"
    android:padding="8dp">

    <!-- Header with title and buttons -->
    <LinearLayout
        android:id="@+id/layerPanelHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/layerPanelDragHandle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="drag_indicator"
            android:textSize="20sp"
            android:textColor="@color/annotation_heading_accent"
            android:fontFamily="@font/materialicons"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŽ¨ Layers"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/annotation_heading_accent"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/btnAddLayer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="add"
            android:textSize="20sp"
            android:textColor="@color/annotation_heading_accent"
            android:fontFamily="@font/materialicons"
            android:background="@drawable/floating_button_item_bg"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/btnCloseLayerPanel"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="close"
            android:textSize="20sp"
            android:textColor="#FF5252"
            android:fontFamily="@font/materialicons"
            android:background="@drawable/floating_button_item_bg"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Scrollable layer list -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/layerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
