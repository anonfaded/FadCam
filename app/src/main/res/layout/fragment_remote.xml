<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Fixed Header -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTopBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nav_remote"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Streaming Control Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HTTP Streaming"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/amoled_text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stream live video over local network"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/amoled_text_secondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable Streaming"
                            android:textSize="15sp"
                            android:textColor="@color/amoled_text_primary" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/streaming_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Inactive"
                        android:textSize="13sp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/amoled_text_secondary" />

                    <TextView
                        android:id="@+id/stream_url_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="http://192.168.1.100:8080/live.m3u8"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/amoled_text_primary"
                        android:fontFamily="monospace"
                        android:background="@drawable/settings_group_card_bg"
                        android:padding="8dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mode Configuration Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recording Mode"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/amoled_text_primary" />

                    <TextView
                        android:id="@+id/mode_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mode: Stream &amp; Save"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/amoled_text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mode_toggle_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toggle Mode"
                        android:layout_marginTop="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Stream Only: No files saved, old segments auto-deleted\n• Stream &amp; Save: Videos saved to gallery"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/amoled_text_secondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Instructions Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How to Watch"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/amoled_text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Enable streaming above\n2. Start recording from Home tab\n3. Open stream URL in:\n   • VLC Media Player\n   • Web browser (HLS player)\n   • FFplay or similar\n\nNote: Device and viewer must be on same WiFi network."
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/amoled_text_secondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
