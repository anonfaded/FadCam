<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- Server Room Image Header with Status Overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/fadcam_server_room_bg_rounded"
            android:scaleType="centerCrop"
            android:contentDescription="@string/stream_server_room" />

        <!-- Status Card Overlay -->
        <LinearLayout
            android:id="@+id/status_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

                <!-- Glow Container + Indicator -->
                <FrameLayout
                    android:id="@+id/glow_container"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <View
                        android:id="@+id/status_glow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@drawable/status_dot_glow"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/status_indicator_dot"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/status_dot_inactive" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_inactive"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Server Status"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp"
                        android:textColor="#DDDDDD"
                        android:shadowColor="#000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="3" />
                </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <!-- Server Room Heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Room"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading"
                android:layout_marginBottom="8dp" />

            <!-- Start Server Toggle Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/stream_start_server"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorHeading" />

                <Switch
                    android:id="@+id/streaming_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Metrics Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="8dp">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="6dp">

                    <!-- Uptime (Clickable) -->
                    <LinearLayout
                        android:id="@+id/uptime_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/settings_home_row_bg"
                        android:padding="10dp"
                        android:layout_marginBottom="6dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uptime"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorHeading" />

                            <TextView
                                android:id="@+id/uptime_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0s"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_arrow_right"
                            android:tint="@android:color/darker_gray"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <!-- Battery (Clickable) -->
                    <LinearLayout
                        android:id="@+id/battery_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/settings_home_row_bg"
                        android:padding="10dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Battery"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorHeading" />

                            <TextView
                                android:id="@+id/battery_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_arrow_right"
                            android:tint="@android:color/darker_gray"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="6dp">

                    <!-- Clients (Clickable) -->
                    <LinearLayout
                        android:id="@+id/clients_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/settings_home_row_bg"
                        android:padding="10dp"
                        android:layout_marginBottom="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Clients"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorHeading" />

                                <TextView
                                    android:id="@+id/connections_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="13sp"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@android:color/darker_gray" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="@android:color/darker_gray" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Segments (Clickable) -->
                    <LinearLayout
                        android:id="@+id/segments_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/settings_home_row_bg"
                        android:padding="10dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Segments"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorHeading" />

                            <TextView
                                android:id="@+id/fragments_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_arrow_right"
                            android:tint="@android:color/darker_gray"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- System Metrics Grid (2 columns) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="8dp">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="6dp">

                    <!-- Network Health (Clickable) -->
                    <LinearLayout
                        android:id="@+id/network_health_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/settings_home_row_bg"
                        android:padding="10dp"
                        android:layout_marginBottom="6dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Network"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorHeading" />

                            <TextView
                                android:id="@+id/network_health_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_arrow_right"
                            android:tint="@android:color/darker_gray"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <!-- Storage -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/settings_home_row_bg"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Storage"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorHeading" />

                        <TextView
                            android:id="@+id/storage_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="6dp">

                    <!-- Memory -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/settings_home_row_bg"
                        android:padding="10dp"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Memory"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorHeading" />

                        <TextView
                            android:id="@+id/memory_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <!-- Data Transferred (Clickable) -->
                    <LinearLayout
                        android:id="@+id/data_sent_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/settings_home_row_bg"
                        android:padding="10dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data Sent"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorHeading" />

                            <TextView
                                android:id="@+id/data_transferred_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 MB"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                        <!-- Arrow Icon -->
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_arrow_right"
                            android:tint="@android:color/darker_gray"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Recording Mode Row -->
            <LinearLayout
                android:id="@+id/recording_mode_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recording Mode"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/recording_mode_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stream Only"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"
                    android:layout_marginEnd="12dp" />
            </LinearLayout>

            <!-- Server URL Row -->
            <LinearLayout
                android:id="@+id/root_url_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Server URL"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/root_url_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="http://---.---.---.---:----/"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/copy_root_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_copy"
                    android:tint="@android:color/darker_gray"
                    android:layout_marginEnd="12dp"
                    android:padding="2dp" />
            </LinearLayout>

            <!-- View All Endpoints Row -->
            <LinearLayout
                android:id="@+id/view_endpoints_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_view_all_endpoints"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View all API endpoints (GET/POST)"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"
                    android:layout_marginEnd="12dp" />
            </LinearLayout>

            <!-- Stream Specs Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream Specifications"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading"
                android:layout_marginBottom="8dp" />

            <!-- FPS & Format Row -->
            <LinearLayout
                android:id="@+id/fps_format_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stream Quality"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/fps_resolution_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High (1080p) • 30fps • 8 Mbps"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"
                    android:layout_marginEnd="12dp" />
            </LinearLayout>

            <!-- Stream Orientation Row - REMOVED (orientation now uses normal recording setting) -->

            <!-- Remote Security Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remote_security_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="16dp">

                <!-- Enable Authentication Row -->
                <LinearLayout
                    android:id="@+id/remote_auth_enable_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/settings_home_row_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remote_security_enable"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorHeading" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remote_security_enable_desc"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/remote_auth_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Set Password Row -->
                <LinearLayout
                    android:id="@+id/remote_auth_password_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/settings_home_row_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remote_security_password"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorHeading" />

                        <TextView
                            android:id="@+id/remote_auth_password_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remote_security_password_desc"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>

                <!-- Auto-Lock Timeout Row -->
                <LinearLayout
                    android:id="@+id/remote_auth_auto_lock_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/settings_home_row_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remote_security_auto_lock"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorHeading" />

                        <TextView
                            android:id="@+id/remote_auth_auto_lock_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Never"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>

                <!-- Logout All Sessions Row -->
                <LinearLayout
                    android:id="@+id/remote_auth_logout_all_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/settings_home_row_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remote_security_logout_all"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorHeading" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remote_security_logout_all_desc"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- How to Use Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to Use"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Start the server using the toggle above"
                    android:textSize="13sp"
                    android:textColor="?attr/colorHeading"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Begin recording on FadCam"
                    android:textSize="13sp"
                    android:textColor="?attr/colorHeading"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Open the Server URL in a browser to watch"
                    android:textSize="13sp"
                    android:textColor="?attr/colorHeading"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Use /live.m3u8 endpoint in media players (VLC, etc.)"
                    android:textSize="13sp"
                    android:textColor="?attr/colorHeading" />
            </LinearLayout>

            <!-- Notes Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stream_notes_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_notes_wifi"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_notes_quality"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_notes_resolution"
                    android:textSize="12sp"
                    android:textColor="?attr/colorHeading" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
