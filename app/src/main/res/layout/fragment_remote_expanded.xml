<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Custom Header (matches Settings style) -->
    <LinearLayout
        android:id="@+id/fixed_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTopBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stream_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fixed_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <!-- SERVER ROOM CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="16dp">

                <!-- Card Heading -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_server_room"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorHeading"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp" />

                <!-- Status Row -->
                <LinearLayout
                    style="@style/SettingsGroupRow"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/stream_server_status"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <!-- Status Indicator with Glow -->
                    <FrameLayout
                        android:id="@+id/glow_container"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp">

                        <View
                            android:id="@+id/status_glow"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/status_dot_glow"
                            android:visibility="gone" />

                        <View
                            android:id="@+id/status_indicator_dot"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:background="@drawable/status_dot_inactive" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_inactive"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>

                <!-- Uptime Row -->
                <LinearLayout
                    style="@style/SettingsGroupRow"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Uptime"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/uptime_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0s"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>

                <!-- Clients Row -->
                <LinearLayout
                    style="@style/SettingsGroupRow"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Active Clients"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/connections_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>

                <!-- Client IPs Row -->
                <LinearLayout
                    style="@style/SettingsGroupRow"
                    android:orientation="vertical"
                    android:id="@+id/client_ips_container"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_client_ips"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/client_ips_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_no_clients"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <!-- Battery Row -->
                <LinearLayout
                    style="@style/SettingsGroupRow"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Battery"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/battery_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>

                <!-- Fragments Row -->
                <LinearLayout
                    style="@style/SettingsGroupRow"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Buffered Segments"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/fragments_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Start Server Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/stream_start_server"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorHeading" />

                <Switch
                    android:id="@+id/streaming_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Recording Mode Row -->
            <LinearLayout
                android:id="@+id/recording_mode_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recording Mode"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/recording_mode_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stream Only"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"
                    android:layout_marginEnd="12dp" />
            </LinearLayout>

            <!-- Server URL Row (always visible with placeholder) -->
            <LinearLayout
                android:id="@+id/root_url_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Server URL"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/root_url_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="http://---.---.---.---:----/"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/copy_root_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_copy"
                    android:tint="@android:color/darker_gray"
                    android:layout_marginEnd="12dp"
                    android:padding="2dp" />
            </LinearLayout>

            <!-- View All Endpoints Row -->
            <LinearLayout
                android:id="@+id/view_endpoints_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_home_row_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/stream_view_all_endpoints"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorHeading" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"
                    android:layout_marginEnd="12dp" />
            </LinearLayout>

            <!-- Stream Specs Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream Specifications"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    style="@style/SettingsGroupRow"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Format"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HLS (fMP4)"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>

                <LinearLayout
                    style="@style/SettingsGroupRow"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FPS / Resolution"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/fps_resolution_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30fps â€¢ 1920x1080"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>

                <LinearLayout
                    style="@style/SettingsGroupRow"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bitrate"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorHeading" />

                    <TextView
                        android:id="@+id/bitrate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 Mbps"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- How to Use Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to Use"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorHeading"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Start the server using the toggle above"
                    android:textSize="13sp"
                    android:textColor="?attr/colorHeading"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Begin recording on FadCam"
                    android:textSize="13sp"
                    android:textColor="?attr/colorHeading"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Open the Server URL in a browser to watch"
                    android:textSize="13sp"
                    android:textColor="?attr/colorHeading"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Use /live.m3u8 endpoint in media players (VLC, etc.)"
                    android:textSize="13sp"
                    android:textColor="?attr/colorHeading" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
