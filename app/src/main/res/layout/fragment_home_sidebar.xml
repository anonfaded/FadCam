<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="@drawable/home_sidesheet_gradient_bg_dynamic"
    android:clipToOutline="true"
    android:outlineProvider="background"
    android:fillViewport="true"
    android:scrollbars="vertical">

<LinearLayout
    android:id="@+id/home_sidebar_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

        <!-- Header with close button and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp">

            <ImageView
                android:id="@+id/home_sidebar_close_btn"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="?attr/pickerTextSecondary"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_options_title"
                android:textColor="?attr/pickerTextPrimary"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="viewStart"/>
        </LinearLayout>

        <!-- Divider below header -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="12dp"
            app:dividerColor="#404040"/>

        <!-- Group: Help -->
        <TextView
            android:id="@+id/help_group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_section"
            android:textColor="?attr/colorHeading"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:textAlignment="viewStart"/>

        <!-- Group card wrapper -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/settings_group_card_bg">

            <!-- Tips row -->
            <LinearLayout
                android:id="@+id/row_tips"
                style="@style/SettingsGroupRow">

                <!-- Tips icon using Material Icons ligature -->
                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/materialicons"
                    android:text="lightbulb"
                    android:textColor="?attr/colorHeading"
                    android:textSize="18sp"
                    android:gravity="center" />

                <!-- Tips title and subtitle -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tips_title"
                        android:textColor="?attr/colorHeading"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tips_subtitle"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:textAlignment="viewStart" />

                </LinearLayout>

                <!-- Arrow -->
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Preview toggle row -->
            <LinearLayout
                android:id="@+id/row_preview_toggle"
                style="@style/SettingsGroupRow">

                <!-- Preview icon using Material Icons ligature -->
                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/materialicons"
                    android:text="visibility"
                    android:textColor="?attr/colorHeading"
                    android:textSize="18sp"
                    android:gravity="center" />

                <!-- Title and subtitle -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_preview_toggle_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_enabled"
                        android:textColor="?attr/colorHeading"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" />

                    <TextView
                        android:id="@+id/tv_preview_toggle_sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_disabled"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <!-- Switch at the end (SwitchCompat for consistent styling) -->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_preview_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:focusable="true"
                    android:clickable="true" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>

</ScrollView>
