<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/picker_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="20dp"
    android:paddingStart="14dp"
    android:paddingEnd="12dp">

    <!-- Header with close button and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <ImageView
            android:id="@+id/picker_close_btn"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="?attr/pickerTextSecondary"
            android:contentDescription="@string/close" />

        <TextView
            android:id="@+id/picker_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorHeading"
            android:textAlignment="viewStart"
            android:text="@string/video_menu_info" />

    </LinearLayout>

    <View
        android:id="@+id/picker_title_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#404040"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- Scroll container for video info -->
    <ScrollView
        android:id="@+id/picker_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="ifContentScrolls"
        android:fillViewport="true"
        android:maxHeight="700dp"
        android:clipToPadding="false"
>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- Card style container -->
            <LinearLayout
                android:id="@+id/video_info_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"

>

                <!-- Video Info Grid Container -->
                <LinearLayout
                    android:id="@+id/video_info_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"/>
                    
                <!-- Divider before copy action -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:background="#404040" />

                <!-- Copy to Clipboard Action -->
                <LinearLayout
                    android:id="@+id/copy_action_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/settings_home_row_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/copy_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:textColor="?attr/pickerTextPrimary"
                        android:textSize="22sp"
                        android:fontFamily="@font/materialicons"
                        android:text="content_copy" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/copy_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/pickerTextPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="@string/video_info_copy_clipboard" />

                        <TextView
                            android:id="@+id/copy_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/pickerTextSecondary"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:text="@string/video_info_copy_subtitle" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>