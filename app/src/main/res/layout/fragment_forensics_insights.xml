<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- ═══ Header bar ═══ -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bar_rounded_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/back"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            android:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:letterSpacing="0.08"
            android:text="@string/forensics_insights_title"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ═══ Loading indicator ═══ -->
    <ProgressBar
        android:id="@+id/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_bar" />

    <!-- ═══ Empty state ═══ -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/materialicons"
            android:text="shield"
            android:textColor="#80FFFFFF"
            android:textSize="48sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/intel_no_data"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- ═══ Content scroll ═══ -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp">

            <!-- SITREP timestamp -->
            <TextView
                android:id="@+id/text_sitrep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.12"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp" />

            <!-- Time range selector — chip dock -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorTopBar">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:requiresFadingEdge="horizontal"
                    android:fadingEdgeLength="24dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="4dp">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/time_range_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:singleLine="true"
                        app:chipSpacingHorizontal="6dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_24h"
                            style="@style/Widget.FadCam.RecordsFilterChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/intel_range_24h" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_7d"
                            style="@style/Widget.FadCam.RecordsFilterChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/intel_range_7d" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_30d"
                            style="@style/Widget.FadCam.RecordsFilterChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/intel_range_30d" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_all"
                            style="@style/Widget.FadCam.RecordsFilterChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/intel_range_all" />
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>
            </androidx.cardview.widget.CardView>

            <!-- ═══ TOTAL DETECTIONS hero card ═══ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/settings_group_card_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/text_total_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorHeading"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:letterSpacing="0.15"
                    android:text="@string/intel_total_detections"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/text_time_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#66FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- ═══ THREAT ASSESSMENT ═══ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:letterSpacing="0.15"
                android:text="@string/intel_threat_assessment"
                android:textAllCaps="true"
                android:textColor="?attr/colorHeading"
                android:textSize="11sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_group_card_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:id="@+id/text_threat_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:paddingStart="14dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_threat_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorHeading"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_threat_basis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ═══ DETECTION BREAKDOWN ═══ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:letterSpacing="0.15"
                android:text="@string/intel_detection_breakdown"
                android:textAllCaps="true"
                android:textColor="?attr/colorHeading"
                android:textSize="11sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_group_card_bg"
                android:orientation="vertical"
                android:padding="6dp">

                <!-- Row 1: Personnel + Vehicles -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/cell_personnel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/materialicons"
                            android:text="person"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/count_personnel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorHeading"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:letterSpacing="0.1"
                            android:text="@string/intel_personnel"
                            android:textAllCaps="true"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cell_vehicles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/materialicons"
                            android:text="directions_car"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/count_vehicles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorHeading"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:letterSpacing="0.1"
                            android:text="@string/intel_vehicles"
                            android:textAllCaps="true"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="9sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 2: Animals + Objects -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/cell_animals"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/materialicons"
                            android:text="pets"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/count_animals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorHeading"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:letterSpacing="0.1"
                            android:text="@string/intel_animals"
                            android:textAllCaps="true"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cell_objects"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/materialicons"
                            android:text="category"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/count_objects"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorHeading"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:letterSpacing="0.1"
                            android:text="@string/intel_objects"
                            android:textAllCaps="true"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="9sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ═══ ACTIVITY TIMELINE ═══ -->
            <TextView
                android:id="@+id/text_timeline_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:letterSpacing="0.15"
                android:text="@string/intel_activity_timeline"
                android:textAllCaps="true"
                android:textColor="?attr/colorHeading"
                android:textSize="11sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_group_card_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/text_peak_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:id="@+id/container_bars"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" />

                <!-- Hour labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12a"
                        android:textAlignment="viewStart"
                        android:textColor="#66FFFFFF"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="6a"
                        android:textAlignment="center"
                        android:textColor="#66FFFFFF"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12p"
                        android:textAlignment="center"
                        android:textColor="#66FFFFFF"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="6p"
                        android:textAlignment="center"
                        android:textColor="#66FFFFFF"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="11p"
                        android:textAlignment="viewEnd"
                        android:textColor="#66FFFFFF"
                        android:textSize="9sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_timeline_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:textColor="?attr/colorHeading"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/intel_tap_bar_hint"
                    android:textColor="#66FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <!-- ═══ ZONE ANALYSIS ═══ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:letterSpacing="0.15"
                android:text="@string/intel_zone_analysis"
                android:textAllCaps="true"
                android:textColor="?attr/colorHeading"
                android:textSize="11sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_group_card_bg"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="6dp"
                    android:text="@string/intel_zone_desc_v2"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp" />

                <!-- Row 1: NW  N  NE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/zone_nw"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:padding="4dp"
                            android:text="↖"
                            android:textColor="#66FFFFFF"
                            android:textSize="8sp" />
                        <TextView
                            android:id="@+id/zone_count_nw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/zone_n"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:padding="4dp"
                            android:text="↑"
                            android:textColor="#66FFFFFF"
                            android:textSize="8sp" />
                        <TextView
                            android:id="@+id/zone_count_n"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/zone_ne"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:padding="4dp"
                            android:text="↗"
                            android:textColor="#66FFFFFF"
                            android:textSize="8sp" />
                        <TextView
                            android:id="@+id/zone_count_ne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Row 2: W  C  E -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/zone_w"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:padding="4dp"
                            android:text="←"
                            android:textColor="#66FFFFFF"
                            android:textSize="8sp" />
                        <TextView
                            android:id="@+id/zone_count_w"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/zone_c"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:padding="4dp"
                            android:text="●"
                            android:textColor="#66FFFFFF"
                            android:textSize="8sp" />
                        <TextView
                            android:id="@+id/zone_count_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/zone_e"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:padding="4dp"
                            android:text="→"
                            android:textColor="#66FFFFFF"
                            android:textSize="8sp" />
                        <TextView
                            android:id="@+id/zone_count_e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Row 3: SW  S  SE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/zone_sw"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:padding="4dp"
                            android:text="↙"
                            android:textColor="#66FFFFFF"
                            android:textSize="8sp" />
                        <TextView
                            android:id="@+id/zone_count_sw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/zone_s"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:padding="4dp"
                            android:text="↓"
                            android:textColor="#66FFFFFF"
                            android:textSize="8sp" />
                        <TextView
                            android:id="@+id/zone_count_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/zone_se"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:padding="4dp"
                            android:text="↘"
                            android:textColor="#66FFFFFF"
                            android:textSize="8sp" />
                        <TextView
                            android:id="@+id/zone_count_se"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ═══ KEY OBSERVATIONS ═══ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:letterSpacing="0.15"
                android:text="@string/intel_key_observations"
                android:textAllCaps="true"
                android:textColor="?attr/colorHeading"
                android:textSize="11sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_group_card_bg"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/text_observations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:textColor="?attr/colorHeading"
                    android:textSize="13sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
