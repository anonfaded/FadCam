<?xml version="1.0" encoding="utf-8"?>
<!-- Page item in list -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/settings_home_row_bg"
    android:paddingStart="14dp"
    android:paddingEnd="12dp"
    android:paddingVertical="12dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="2dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page 1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtPageInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 layers"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btnDeletePage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="delete"
        android:textSize="20sp"
        android:textColor="#FF5252"
        android:fontFamily="@font/materialicons"
        android:background="@drawable/floating_button_item_bg"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="8dp" />

</LinearLayout>
