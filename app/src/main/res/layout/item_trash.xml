<?xml version="1.0" encoding="utf-8"?>
<!-- Trash card â€” vertical layout matching Records style -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple_black_rounded"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thumbnail with 16:9 ratio -->
        <FrameLayout
            android:id="@+id/trash_thumbnail_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_view_trash_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/trash_item_thumbnail_desc"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/ic_video_placeholder" />

            <!-- Selection dim overlay -->
            <View
                android:id="@+id/trash_selection_dim_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B5000000"
                android:visibility="gone" />

            <!-- Check container centered on thumbnail -->
            <FrameLayout
                android:id="@+id/icon_check_container"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:visibility="gone">

                <View
                    android:id="@+id/icon_check_bg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@drawable/picker_check_background" />

                <ImageView
                    android:id="@+id/icon_check"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avd_check_draw"
                    app:tint="?attr/colorPrimary"
                    android:scaleX="0"
                    android:scaleY="0"
                    android:alpha="0.0" />
            </FrameLayout>

        </FrameLayout>

        <!-- Content below thumbnail -->
        <LinearLayout
            android:id="@+id/trash_content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trash_thumbnail_container">

            <!-- Title (original filename) -->
            <TextView
                android:id="@+id/tv_trash_item_original_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="14sp"
                tools:text="Original Video File Name.mp4" />

            <!-- Divider -->
            <View
                android:id="@+id/trash_meta_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:background="#33FFFFFF" />

            <!-- Metadata grid: date trashed + remaining time on rows -->
            <GridLayout
                android:id="@+id/trash_meta_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:orientation="horizontal"
                android:useDefaultMargins="false">

                <!-- Column 0: Date trashed (vertical: icon + text) -->
                <LinearLayout
                    android:id="@+id/trash_meta_row_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_date_trashed"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/tv_trash_item_date_trashed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="10sp"
                        tools:text="2 days ago" />
                </LinearLayout>

                <!-- Row 0, Column 1: Remaining time -->
                <LinearLayout
                    android:id="@+id/trash_meta_row_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_remaining_time"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_delete"
                        android:tint="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/tv_trash_item_remaining_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="10sp"
                        tools:text="28 days left" />
                </LinearLayout>

                <!-- Row 1, Column 1: File size -->
                <LinearLayout
                    android:id="@+id/trash_meta_row_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_file_size"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/database_24px"
                        android:tint="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/tv_trash_item_file_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="10sp"
                        tools:text="123.4 MB" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
