<resources>
    <style name="CustomBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="background">@drawable/picker_bottom_sheet_gradient_bg_dynamic</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Widget.FadCam.BottomSheetSlider" parent="Widget.Material3.Slider">
        <item name="trackColorActive">?attr/pickerSliderActive</item>
        <item name="trackColorInactive">?attr/pickerSliderInactive</item>
        <item name="tickColorActive">?attr/pickerSliderActive</item>
        <item name="tickColorInactive">?attr/pickerSliderInactive</item>
        <item name="tickVisible">false</item>
        <item name="thumbColor">?attr/pickerSliderActive</item>
        <item name="haloColor">?attr/pickerSliderActive</item>
        <item name="trackHeight">4dp</item>
        <item name="thumbRadius">10dp</item>
        <item name="haloRadius">18dp</item>
    </style>

    <style name="Widget.FadCam.RecordsFilterChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipMinHeight">28dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="android:textSize">11sp</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStartPadding">6dp</item>
        <item name="chipEndPadding">6dp</item>
        <item name="textStartPadding">4dp</item>
        <item name="textEndPadding">4dp</item>
        <item name="iconStartPadding">2dp</item>
        <item name="iconEndPadding">2dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="chipBackgroundColor">@color/chip_floating_bg_color</item>
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RecordsActionPill" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">@drawable/settings_group_card_bg</item>
        <item name="android:textColor">?attr/pickerTextPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="KoFiButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/kofi_button_bg</item>
        <item name="android:textColor">#222222</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Fix Start: Add missing Material text appearance styles for compatibility -->
    <style name="textAppearanceSubtitle1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorHeading</item>
    </style>
    <style name="textAppearanceCaption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    <style name="textAppearanceSubtitle2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorHeading</item>
    </style>
    <!-- Fix End: Add missing Material text appearance styles for compatibility -->

    <!-- Settings home row style -->
    <style name="SettingsGroupRow" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/settings_home_row_bg</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="SettingsDivider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#262626</item>
        <!-- Match SettingsGroupRow horizontal insets (14dp start / 12dp end) -->
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <!-- TextAppearances for AppWidget (Ubuntu font) -->
    <style name="WidgetText.Ubuntu.Regular" parent="">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="WidgetText.Ubuntu.Bold" parent="WidgetText.Ubuntu.Regular">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Switch theme for floating menu -->
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#4CAF50</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#FFFFFF</item>
    </style>

    <!-- Transparent editor activity theme -->
    <style name="TransparentEditorTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- FadCam Pro Activity Theme with Ubuntu Font -->
    <style name="FadCamProTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <!-- Faditor Editor dark immersive theme -->
    <style name="Theme.FadCam.FaditorEditor" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:colorBackground">#FF0D0D0D</item>
        <item name="colorSurface">#FF1A1A1A</item>
        <item name="colorSurfaceVariant">#FF252525</item>
        <item name="colorOnSurface">#FFFFFFFF</item>
        <item name="colorOnSurfaceVariant">#FFAAAAAA</item>
        <item name="colorPrimary">#FF4CAF50</item>
        <item name="colorOnPrimary">#FF000000</item>
        <item name="colorSecondaryContainer">#FF2E7D32</item>
        <item name="android:windowBackground">#FF0D0D0D</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#FF1A1A1A</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Required for picker_bottom_sheet and InputActionBottomSheetFragment -->
        <item name="pickerTextSecondary">#999999</item>
        <item name="pickerTextPrimary">@android:color/white</item>
        <item name="colorHeading">#FF4CAF50</item>
        <item name="pickerGradientStart">@color/black</item>
        <item name="pickerGradientMid">#FF1A1A1A</item>
        <item name="pickerGradientEnd">#FF2A2A2A</item>
    </style>
</resources>
