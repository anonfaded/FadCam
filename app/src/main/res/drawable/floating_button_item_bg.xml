<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#1E1E1E" /> <!-- Darker for disabled -->
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/annotation_border_subtle" />
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <ripple android:color="#40FFFFFF">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#1E1E1E" /> <!-- Dark gray -->
                    <corners android:radius="12dp" />
                    <stroke android:width="1dp" android:color="@color/annotation_border_subtle" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>